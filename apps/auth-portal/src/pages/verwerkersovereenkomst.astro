  <script>
    // Auto-save client info on input change
    const fields = ['name', 'address', 'kvk', 'contact', 'email'];

    function saveClientData() {
      const clientData: Record<string, string> = {};
      fields.forEach(field => {
        const input = document.getElementById(`client-${field}`) as HTMLInputElement;
        if (input) {
          clientData[field] = input.value;
        }
      });
      localStorage.setItem('dpa-client-data', JSON.stringify(clientData));
    }

    // Add change listeners to all fields
    fields.forEach(field => {
      const input = document.getElementById(`client-${field}`);
      if (input) {
        input.addEventListener('input', saveClientData);
        input.addEventListener('blur', saveClientData);
      }
    });

    // Restore from localStorage on load
    document.addEventListener('DOMContentLoaded', () => {
      const saved = localStorage.getItem('dpa-client-data');
      if (saved) {
        try {
          const data = JSON.parse(saved);
          fields.forEach(field => {
            const input = document.getElementById(`client-${field}`) as HTMLInputElement;
            if (input && data[field]) {
              input.value = data[field];
            }
          });
        } catch (e) {
          // Ignore parsing errors
        }
      }
    });
  </script>

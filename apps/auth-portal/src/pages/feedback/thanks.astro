---
/**
 * Feedback Thank You Page
 *
 * Shown after positive feedback submission (NPS 9-10)
 */
import Layout from '../../layouts/Layout.astro';

const score = Astro.url.searchParams.get('score');
const token = Astro.url.searchParams.get('token');
const npsScore = score ? parseInt(score, 10) : null;
const isPromoter = npsScore !== null && npsScore >= 9;
---

<Layout title="Bedankt voor je feedback">
  <div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="max-w-md w-full text-center">
      <!-- Success Icon -->
      <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>

      <h1 class="text-2xl font-bold text-gray-900 mb-3">
        Bedankt voor je feedback!
      </h1>

      {npsScore !== null && (
        <p class="text-gray-600 mb-6">
          Je gaf een {npsScore} van 10. {isPromoter ? 'Fijn om te horen dat je positief bent!' : 'We waarderen je eerlijke mening.'}
        </p>
      )}

      {isPromoter && (
        <div class="bg-green-50 border border-green-200 rounded-xl p-6 mb-6 text-left">
          <h2 class="font-semibold text-green-900 mb-2">
            Wil je anderen helpen?
          </h2>
          <p class="text-green-700 text-sm mb-4">
            Jouw ervaring kan andere ondernemers helpen de stap te zetten. Deel je een korte quote voor onze website?
          </p>

          <form action="/api/feedback/testimonial" method="POST" class="space-y-4">
            <input type="hidden" name="token" value={token} />
            <input type="hidden" name="nps_score" value={npsScore} />

            <div>
              <label for="quote" class="block text-sm font-medium text-green-800 mb-1">
                Wat waardeer je het meest?
              </label>
              <textarea
                id="quote"
                name="testimonial_quote"
                rows="3"
                class="w-full px-3 py-2 border border-green-300 rounded-lg text-sm focus:ring-2 focus:ring-green-500 focus:border-transparent focus:outline-none resize-none"
                placeholder="Bijv: 'Eindelijk snel antwoord op mijn boekhoudvragen'"
              ></textarea>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-green-800 mb-1">
                  Naam
                </label>
                <input
                  type="text"
                  id="name"
                  name="testimonial_display_name"
                  class="w-full px-3 py-2 border border-green-300 rounded-lg text-sm focus:ring-2 focus:ring-green-500 focus:border-transparent focus:outline-none"
                  placeholder="Matthijs"
                />
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-green-800 mb-1">
                  Bedrijf (optioneel)
                </label>
                <input
                  type="text"
                  id="company"
                  name="testimonial_company"
                  class="w-full px-3 py-2 border border-green-300 rounded-lg text-sm focus:ring-2 focus:ring-green-500 focus:border-transparent focus:outline-none"
                  placeholder="Jouw BV"
                />
              </div>
            </div>

            <div>
              <label for="role" class="block text-sm font-medium text-green-800 mb-1">
                Functie (optioneel)
              </label>
              <input
                type="text"
                id="role"
                name="testimonial_role"
                class="w-full px-3 py-2 border border-green-300 rounded-lg text-sm focus:ring-2 focus:ring-green-500 focus:border-transparent focus:outline-none"
                placeholder="CFO"
              />
            </div>

            <label class="flex items-start gap-2 cursor-pointer">
              <input
                type="checkbox"
                name="permission_website"
                value="1"
                class="mt-1 rounded border-green-300 text-green-600 focus:ring-green-500"
                required
              />
              <span class="text-xs text-green-700">
                Ik geef toestemming om deze quote te publiceren op de website van Praat met je Boekhouding
              </span>
            </label>

            <button
              type="submit"
              class="w-full px-4 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors"
            >
              Versturen
            </button>
          </form>

          <p class="text-xs text-green-600 mt-3 text-center">
            We sturen een preview voordat het live gaat
          </p>
        </div>
      )}

      <div class="space-y-3">
        <a
          href="/dashboard"
          class="block px-6 py-3 bg-exact-blue text-white font-semibold rounded-lg hover:bg-exact-dark transition-colors"
        >
          Terug naar Dashboard
        </a>

        {!isPromoter && (
          <p class="text-sm text-gray-500">
            Heb je specifieke feedback? <a href="mailto:hello@praatmetjeboekhouding.nl" class="text-exact-blue hover:underline">Mail ons</a>
          </p>
        )}
      </div>
    </div>
  </div>
</Layout>

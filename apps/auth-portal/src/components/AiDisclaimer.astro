---
/**
 * AI Disclaimer Component
 * Herbruikbare disclaimer voor AI-gegenereerde output
 * Gebruik in dashboard en andere pagina's waar AI-output wordt getoond
 */

interface Props {
  variant?: 'banner' | 'inline' | 'compact';
}

const { variant = 'inline' } = Astro.props;
---

{variant === 'banner' && (
  <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
    <div class="flex gap-3">
      <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <div>
        <p class="font-medium text-amber-800">Geen financieel of fiscaal advies</p>
        <p class="text-sm text-amber-700 mt-1">
          AI-gegenereerde output is informatief, niet adviserend. Controleer altijd de gegevens
          en raadpleeg een professional voor financiÃ«le beslissingen.
        </p>
      </div>
    </div>
  </div>
)}

{variant === 'inline' && (
  <p class="text-xs text-gray-500 mt-2 flex items-center gap-1">
    <svg class="w-3.5 h-3.5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <span>AI-output is geen financieel advies. <a href="/voorwaarden#aansprakelijkheid" class="underline hover:text-gray-700">Meer info</a></span>
  </p>
)}

{variant === 'compact' && (
  <div class="inline-flex items-center gap-1 px-2 py-1 bg-amber-50 text-amber-700 text-xs rounded-md border border-amber-200">
    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <span>Geen advies</span>
  </div>
)}

---
import Layout from '../../../layouts/Layout.astro';
import { Database } from '../../../lib/database';
// AdminAppLauncher now in Layout.astro header

const env = Astro.locals.runtime?.env;
let db: Database | null = null;
let isAdmin = false;
let settings: Record<string, string> = {};
let success: string | null = null;
let error: string | null = null;
let userId: string | null = null;

try {
  if (env?.DB) {
    db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);

    const sessionId = Astro.cookies.get('session_id')?.value;
    if (sessionId) {
      const session = await db.validateSession(sessionId);
      if (session) {
        const adminEmails = (env.ADMIN_EMAILS || '')
          .split(',')
          .map((e: string) => e.trim().toLowerCase())
          .filter((e: string) => e.length > 0);

        isAdmin = adminEmails.includes(session.user.email.toLowerCase());
        userId = session.user.id;

        if (isAdmin) {
          // Handle form submission
          if (Astro.request.method === 'POST') {
            const formData = await Astro.request.formData();

            await db.setSystemSetting(
              'support_enabled',
              formData.get('support_enabled') === 'on' ? 'true' : 'false',
              userId
            );
            await db.setSystemSetting(
              'support_paused',
              formData.get('support_paused') === 'on' ? 'true' : 'false',
              userId
            );
            await db.setSystemSetting(
              'support_pause_message',
              formData.get('support_pause_message')?.toString() || '',
              userId
            );
            await db.setSystemSetting(
              'support_ai_enabled',
              formData.get('support_ai_enabled') === 'on' ? 'true' : 'false',
              userId
            );
            await db.setSystemSetting(
              'support_ai_confidence_threshold',
              formData.get('support_ai_confidence_threshold')?.toString() || '0.8',
              userId
            );

            success = 'Instellingen opgeslagen';
          }

          settings = await db.getAllSystemSettings();
        }
      }
    }
  }
} catch (e) {
  console.error('Admin settings error:', e);
  error = 'Er is een fout opgetreden';
}
---

<Layout title="Support Instellingen">
  <div class="max-w-3xl mx-auto px-4 py-8">
    {!isAdmin ? (
      <div class="bg-red-50 border border-red-200 rounded-xl p-8 text-center">
        <h1 class="text-2xl font-bold text-red-900 mb-4">Toegang Geweigerd</h1>
        <p class="text-red-700">Je hebt geen toegang tot deze pagina.</p>
        <a href="/dashboard" class="inline-block mt-4 text-red-600 hover:underline">
          ← Terug naar Dashboard
        </a>
      </div>
    ) : (
      <>
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Support Instellingen</h1>
            <p class="text-gray-600">Beheer systeem-brede support instellingen</p>
          </div>
          <div class="flex items-center gap-3">
            <a href="/admin/support" class="text-gray-600 hover:text-gray-900">
              ← Terug
            </a>
          </div>
        </div>

        {/* Notifications */}
        {success && (
          <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
            <p class="text-green-700">{success}</p>
          </div>
        )}
        {error && (
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <p class="text-red-700">{error}</p>
          </div>
        )}

        <form method="POST" class="space-y-8">
          <!-- System Status -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Systeem Status</h2>

            <div class="space-y-6">
              <!-- Support Enabled -->
              <div class="flex items-center justify-between">
                <div>
                  <label for="support_enabled" class="font-medium text-gray-900">
                    Support Systeem
                  </label>
                  <p class="text-sm text-gray-500">
                    Schakel het gehele support systeem in of uit
                  </p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input
                    type="checkbox"
                    name="support_enabled"
                    id="support_enabled"
                    checked={settings.support_enabled !== 'false'}
                    class="sr-only peer"
                  />
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-exact-blue"></div>
                </label>
              </div>

              <!-- Pause Mode -->
              <div class="border-t border-gray-100 pt-6">
                <div class="flex items-center justify-between mb-4">
                  <div>
                    <label for="support_paused" class="font-medium text-gray-900">
                      Pauze Modus
                    </label>
                    <p class="text-sm text-gray-500">
                      Tijdelijk nieuwe gesprekken blokkeren
                    </p>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input
                      type="checkbox"
                      name="support_paused"
                      id="support_paused"
                      checked={settings.support_paused === 'true'}
                      class="sr-only peer"
                    />
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-yellow-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-yellow-500"></div>
                  </label>
                </div>

                <div>
                  <label for="support_pause_message" class="block text-sm font-medium text-gray-700 mb-1">
                    Pauze Melding
                  </label>
                  <textarea
                    name="support_pause_message"
                    id="support_pause_message"
                    rows="2"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-exact-blue focus:border-transparent focus:outline-none"
                  >{settings.support_pause_message || 'Het support systeem is tijdelijk niet beschikbaar. Probeer het later opnieuw.'}</textarea>
                </div>
              </div>
            </div>
          </div>

          <!-- AI Settings -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">AI Auto-Response</h2>

            <div class="space-y-6">
              <!-- AI Enabled -->
              <div class="flex items-center justify-between">
                <div>
                  <label for="support_ai_enabled" class="font-medium text-gray-900">
                    AI Responses
                  </label>
                  <p class="text-sm text-gray-500">
                    Automatische AI-antwoorden op basis van patterns
                  </p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input
                    type="checkbox"
                    name="support_ai_enabled"
                    id="support_ai_enabled"
                    checked={settings.support_ai_enabled !== 'false'}
                    class="sr-only peer"
                  />
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                </label>
              </div>

              <!-- Confidence Threshold -->
              <div class="border-t border-gray-100 pt-6">
                <label for="support_ai_confidence_threshold" class="block font-medium text-gray-900 mb-2">
                  Minimum Confidence Threshold
                </label>
                <p class="text-sm text-gray-500 mb-3">
                  AI reageert alleen automatisch als de confidence boven deze drempel is
                </p>
                <div class="flex items-center gap-4">
                  <input
                    type="range"
                    name="support_ai_confidence_threshold"
                    id="support_ai_confidence_threshold"
                    min="0.5"
                    max="1"
                    step="0.05"
                    value={settings.support_ai_confidence_threshold || '0.8'}
                    class="flex-1 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
                  />
                  <span id="confidenceValue" class="text-lg font-medium text-gray-900 w-16 text-right">
                    {Math.round(parseFloat(settings.support_ai_confidence_threshold || '0.8') * 100)}%
                  </span>
                </div>
              </div>
            </div>
          </div>

          <!-- Submit -->
          <div class="flex justify-end">
            <button
              type="submit"
              class="px-6 py-3 bg-exact-blue text-white font-semibold rounded-lg hover:bg-exact-dark transition-colors"
            >
              Opslaan
            </button>
          </div>
        </form>
      </>
    )}
  </div>

  <script>
    // Update confidence display
    const slider = document.getElementById('support_ai_confidence_threshold') as HTMLInputElement;
    const display = document.getElementById('confidenceValue');

    slider?.addEventListener('input', () => {
      if (display) {
        display.textContent = `${Math.round(parseFloat(slider.value) * 100)}%`;
      }
    });
  </script>
</Layout>

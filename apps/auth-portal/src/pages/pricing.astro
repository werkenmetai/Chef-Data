---
import Layout from '../layouts/Layout.astro';
import { Database } from '../lib/database';
import { EXACT_APP_STORE_URL, EXACT_APP_STORE_ENABLED } from '../lib/constants';

// Check if user is connected
let isConnected = false;
let userPlan = 'free';
try {
  const env = Astro.locals.runtime?.env;
  if (env?.DB) {
    const db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);
    const sessionId = Astro.cookies.get('session_id')?.value;
    if (sessionId) {
      const session = await db.validateSession(sessionId);
      isConnected = !!session;
      userPlan = session?.user?.plan || 'free';
    }
  }
} catch (e) {
  // Ignore errors, default to not connected
}

// Determine upgrade URL based on App Store status
const upgradeUrl = EXACT_APP_STORE_ENABLED ? EXACT_APP_STORE_URL : null;

// Plan hierarchy for upgrade/downgrade detection
const planOrder: Record<string, number> = {
  free: 0,
  starter: 1,
  pro: 2,
  enterprise: 3,
};

// Helper to determine action text
function getActionText(currentPlan: string, targetPlan: string): string {
  const current = planOrder[currentPlan] ?? 0;
  const target = planOrder[targetPlan] ?? 0;
  const planName = targetPlan.charAt(0).toUpperCase() + targetPlan.slice(1);

  if (target > current) {
    return `Upgrade naar ${planName}`;
  } else {
    return `Downgrade naar ${planName}`;
  }
}

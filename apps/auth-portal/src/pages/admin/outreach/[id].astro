---
/**
 * Campaign Detail Page
 *
 * Shows campaign details and logs for a specific outreach campaign.
 *
 * @author Sophie (Customer Success)
 */
import Layout from '../../../layouts/Layout.astro';
import { Database } from '../../../lib/database';
import { createOutreachEngine, type OutreachCampaign, type OutreachLogWithUser } from '../../../lib/outreach';
// AdminAppLauncher now in Layout.astro header

const { id } = Astro.params;
const env = Astro.locals.runtime?.env;
const db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);

// Check admin access
const adminEmails = (env.ADMIN_EMAILS || '')
  .split(',')
  .map((e: string) => e.trim().toLowerCase())
  .filter((e: string) => e.length > 0);

const sessionId = Astro.cookies.get('session_id')?.value;
let isAdmin = false;
let error: string | null = null;
let success: string | null = null;

if (sessionId) {
  const sessionResult = await db.validateSession(sessionId);
  if (sessionResult) {
    isAdmin = adminEmails.length > 0 && adminEmails.includes(sessionResult.user.email.toLowerCase());
    if (!isAdmin) {
      error = 'Je hebt geen toegang tot deze pagina.';
    }
  } else {
    error = 'Niet ingelogd.';
  }
} else {
  error = 'Niet ingelogd.';
}

// Handle POST actions
if (isAdmin && Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action') as string;

  const engine = createOutreachEngine(env.DB, env);

  try {
    switch (action) {
      case 'toggle': {
        const campaign = await engine.getCampaign(id!);
        if (campaign) {
          await engine.toggleCampaign(id!, !campaign.is_active);
          success = `Campaign is nu ${campaign.is_active ? 'uitgeschakeld' : 'ingeschakeld'}`;
        }
        break;
      }
      case 'update': {
        const name = formData.get('name') as string;
        const description = formData.get('description') as string;
        const email_subject = formData.get('email_subject') as string;
        const config = formData.get('config') as string;

        await engine.updateCampaign(id!, {
          name,
          description,
          email_subject,
          config,
        });
        success = 'Campaign bijgewerkt';
        break;
      }
      case 'run': {
        const campaign = await engine.getCampaign(id!);
        if (campaign) {
          const results = await engine.runCampaign(campaign);
          const sent = results.filter(r => r.success).length;
          const errors = results.filter(r => !r.success).length;
          success = `Campaign uitgevoerd: ${sent} emails verzonden, ${errors} fouten`;
        }
        break;
      }
    }
  } catch (e) {
    error = 'Actie mislukt: ' + (e instanceof Error ? e.message : 'Onbekende fout');
  }
}

// Load campaign data
let campaign: OutreachCampaign | null = null;
let logs: OutreachLogWithUser[] = [];

if (isAdmin && id) {
  try {
    const engine = createOutreachEngine(env.DB, env);
    campaign = await engine.getCampaign(id);
    if (campaign) {
      logs = await engine.getCampaignLogs(id, 100);
    } else {
      error = 'Campaign niet gevonden';
    }
  } catch (e) {
    error = 'Fout bij laden van data';
    console.error('Campaign load error:', e);
  }
}

// Parse config for display
let parsedConfig: Record<string, unknown> = {};
if (campaign?.config) {
  try {
    parsedConfig = JSON.parse(campaign.config);
  } catch {
    // Ignore parse errors
  }
}

// Trigger type display names
const triggerTypeNames: Record<string, string> = {
  limit_80: 'Limiet 80%',
  limit_100: 'Limiet 100%',
  inactive_14d: 'Inactief 14 dagen',
  nps_high: 'Hoge NPS Score',
  milestone: 'Query Milestone',
  error_pattern: 'Error Patroon',
};
---

<Layout title={campaign?.name || 'Campaign Details'}>
  <div class="max-w-5xl mx-auto px-4 py-8">
    {!isAdmin || !campaign ? (
      <div class="bg-red-50 border border-red-200 rounded-xl p-8 text-center">
        <h1 class="text-2xl font-bold text-red-900 mb-4">
          {error || 'Campaign niet gevonden'}
        </h1>
        <a href="/admin/outreach" class="inline-block mt-4 text-red-600 hover:underline">
          ← Terug naar Outreach
        </a>
      </div>
    ) : (
      <>
        {/* Header */}
        <div class="flex justify-between items-start mb-8">
          <div>
            <a href="/admin/outreach" class="text-gray-500 hover:text-gray-700 text-sm mb-2 inline-block">
              ← Terug naar Overzicht
            </a>
            <h1 class="text-2xl font-bold text-gray-900">{campaign.name}</h1>
            <p class="text-gray-600">{campaign.description}</p>
          </div>
          <div class="flex items-center gap-3">
            <form method="POST">
              <input type="hidden" name="action" value="run" />
              <button
                type="submit"
                onclick="return confirm('Weet je zeker dat je deze campaign nu wilt uitvoeren?')"
                class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm"
              >
                Nu Uitvoeren
              </button>
            </form>
            <form method="POST">
              <input type="hidden" name="action" value="toggle" />
              <button
                type="submit"
                class={`px-4 py-2 rounded-lg transition-colors text-sm ${
                  campaign.is_active
                    ? 'bg-red-100 text-red-700 hover:bg-red-200'
                    : 'bg-green-100 text-green-700 hover:bg-green-200'
                }`}
              >
                {campaign.is_active ? 'Uitschakelen' : 'Inschakelen'}
              </button>
            </form>
          </div>
        </div>

        {/* Notifications */}
        {success && (
          <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
            <p class="text-green-700">{success}</p>
          </div>
        )}
        {error && (
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <p class="text-red-700">{error}</p>
          </div>
        )}

        {/* Campaign Stats */}
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <h3 class="text-xs font-medium text-gray-500 uppercase">Status</h3>
            <p class={`text-lg font-bold mt-1 ${campaign.is_active ? 'text-green-600' : 'text-gray-400'}`}>
              {campaign.is_active ? 'Actief' : 'Inactief'}
            </p>
          </div>
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <h3 class="text-xs font-medium text-gray-500 uppercase">Verzonden</h3>
            <p class="text-lg font-bold text-gray-900 mt-1">{campaign.emails_sent.toLocaleString()}</p>
          </div>
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <h3 class="text-xs font-medium text-gray-500 uppercase">Geopend</h3>
            <p class="text-lg font-bold text-gray-900 mt-1">
              {campaign.emails_opened.toLocaleString()}
              <span class="text-sm font-normal text-gray-500 ml-1">
                ({campaign.emails_sent > 0 ? ((campaign.emails_opened / campaign.emails_sent) * 100).toFixed(1) : 0}%)
              </span>
            </p>
          </div>
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <h3 class="text-xs font-medium text-gray-500 uppercase">Geklikt</h3>
            <p class="text-lg font-bold text-gray-900 mt-1">
              {campaign.emails_clicked.toLocaleString()}
              <span class="text-sm font-normal text-gray-500 ml-1">
                ({campaign.emails_sent > 0 ? ((campaign.emails_clicked / campaign.emails_sent) * 100).toFixed(1) : 0}%)
              </span>
            </p>
          </div>
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <h3 class="text-xs font-medium text-gray-500 uppercase">Conversies</h3>
            <p class="text-lg font-bold text-gray-900 mt-1">{campaign.conversions.toLocaleString()}</p>
          </div>
        </div>

        <div class="grid md:grid-cols-3 gap-6 mb-8">
          {/* Campaign Settings */}
          <div class="md:col-span-2 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Instellingen</h2>

            <form method="POST" class="space-y-4">
              <input type="hidden" name="action" value="update" />

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Naam</label>
                <input
                  type="text"
                  name="name"
                  value={campaign.name}
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Beschrijving</label>
                <textarea
                  name="description"
                  rows="2"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >{campaign.description}</textarea>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email Onderwerp</label>
                <input
                  type="text"
                  name="email_subject"
                  value={campaign.email_subject || ''}
                  placeholder="{{userName}}, {{percent}}%, etc."
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Configuratie (JSON)</label>
                <textarea
                  name="config"
                  rows="3"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg font-mono text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >{campaign.config || '\u007B\u007D'}</textarea>
              </div>

              <button
                type="submit"
                class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
              >
                Opslaan
              </button>
            </form>
          </div>

          {/* Campaign Info */}
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Info</h2>

            <dl class="space-y-3 text-sm">
              <div>
                <dt class="text-gray-500">Trigger Type</dt>
                <dd class="font-medium text-gray-900">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">
                    {triggerTypeNames[campaign.trigger_type] || campaign.trigger_type}
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-gray-500">Prioriteit</dt>
                <dd class="font-medium text-gray-900">{campaign.priority}</dd>
              </div>
              <div>
                <dt class="text-gray-500">Cooldown</dt>
                <dd class="font-medium text-gray-900">
                  {parsedConfig.cooldown_days || 7} dagen
                </dd>
              </div>
              <div>
                <dt class="text-gray-500">Aangemaakt</dt>
                <dd class="font-medium text-gray-900">
                  {new Date(campaign.created_at).toLocaleDateString('nl-NL')}
                </dd>
              </div>
              {campaign.updated_at && (
                <div>
                  <dt class="text-gray-500">Laatst bijgewerkt</dt>
                  <dd class="font-medium text-gray-900">
                    {new Date(campaign.updated_at).toLocaleDateString('nl-NL')}
                  </dd>
                </div>
              )}
            </dl>
          </div>
        </div>

        {/* Recent Logs */}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-900">Recente Verzendingen</h2>
          </div>

          {logs.length > 0 ? (
            <div class="overflow-x-auto">
              <table class="w-full text-sm">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="text-left py-3 px-4 font-medium text-gray-500">Gebruiker</th>
                    <th class="text-left py-3 px-4 font-medium text-gray-500">Trigger Data</th>
                    <th class="text-center py-3 px-4 font-medium text-gray-500">Status</th>
                    <th class="text-left py-3 px-4 font-medium text-gray-500">Datum</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                  {logs.map((log) => {
                    let triggerData = {};
                    try {
                      triggerData = log.trigger_data ? JSON.parse(log.trigger_data) : {};
                    } catch {
                      // Ignore
                    }

                    return (
                      <tr class="hover:bg-gray-50">
                        <td class="py-3 px-4">
                          <div class="font-medium text-gray-900">{log.user_email}</div>
                          {log.user_name && (
                            <div class="text-gray-500 text-xs">{log.user_name}</div>
                          )}
                        </td>
                        <td class="py-3 px-4 font-mono text-xs text-gray-600">
                          {Object.entries(triggerData).slice(0, 3).map(([key, value]) => (
                            <div>{key}: {String(value)}</div>
                          ))}
                        </td>
                        <td class="py-3 px-4 text-center">
                          {log.email_sent ? (
                            <div class="flex flex-col items-center gap-1">
                              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs bg-green-100 text-green-800">
                                Verzonden
                              </span>
                              {log.email_opened ? (
                                <span class="text-xs text-gray-500">Geopend</span>
                              ) : null}
                              {log.email_clicked ? (
                                <span class="text-xs text-blue-600">Geklikt</span>
                              ) : null}
                            </div>
                          ) : (
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs bg-red-100 text-red-800">
                              Mislukt
                            </span>
                          )}
                        </td>
                        <td class="py-3 px-4 text-gray-500">
                          {new Date(log.created_at).toLocaleString('nl-NL', {
                            day: '2-digit',
                            month: '2-digit',
                            hour: '2-digit',
                            minute: '2-digit',
                          })}
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          ) : (
            <div class="px-6 py-8 text-center text-gray-500">
              Nog geen verzendingen voor deze campaign
            </div>
          )}
        </div>
      </>
    )}
  </div>
</Layout>

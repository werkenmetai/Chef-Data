---
import { t, type Language } from '../lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

const connectUrl = lang === 'en' ? '/en/connect' : '/connect';
const pricingUrl = lang === 'en' ? '/en/pricing' : '/pricing';
---

<!-- Coming Soon Banner -->
<div class="bg-gradient-to-r from-exact-blue to-blue-600 text-white py-3">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4 text-center">
      <div class="flex items-center gap-2">
        <span class="inline-flex items-center justify-center w-6 h-6 bg-white/20 rounded-full animate-pulse">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
          </svg>
        </span>
        <span class="font-medium">{t('home.comingSoon', lang)}</span>
      </div>
      <span class="text-white/80">{t('home.interested', lang)}</span>
      <a
        href="mailto:matthijs@chefdata.nl"
        class="inline-flex items-center gap-1 px-3 py-1 bg-white text-exact-blue font-semibold rounded-full text-sm hover:bg-white/90 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        matthijs@chefdata.nl
      </a>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Hero -->
  <div class="py-16 md:py-24 text-center">
    <div class="inline-block px-4 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium mb-6">
      {t('home.badge', lang)}
    </div>
    <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl leading-tight">
      {t('home.heroTitle1', lang)}
      <span class="text-exact-blue">Exact Online</span>
      <br class="hidden sm:block" />
      {t('home.heroTitle2', lang)}
    </h1>
    <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-600">
      {t('home.heroSubtitle', lang)}
    </p>
    <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
      <a
        href={connectUrl}
        class="px-8 py-4 bg-exact-blue text-white font-semibold rounded-lg hover:bg-exact-dark transition-colors text-lg"
      >
        {t('home.ctaStart', lang)} →
      </a>
      <a
        href="#demo"
        class="px-8 py-4 bg-white text-gray-700 font-semibold rounded-lg border-2 border-gray-200 hover:border-gray-300 transition-colors text-lg"
      >
        {t('home.ctaDemo', lang)}
      </a>
    </div>
    <p class="mt-4 text-sm text-gray-500">
      {t('home.noCreditCard', lang)}
    </p>
  </div>

  <!-- Social proof -->
  <div class="py-8 border-y border-gray-100">
    <p class="text-center text-gray-500 text-sm mb-4">{t('home.worksWithAI', lang)}</p>
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
      <div class="flex items-center gap-2">
        <!-- OpenAI / ChatGPT logo -->
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M22.2819 9.8211a5.9847 5.9847 0 0 0-.5157-4.9108 6.0462 6.0462 0 0 0-6.5098-2.9A6.0651 6.0651 0 0 0 4.9807 4.1818a5.9847 5.9847 0 0 0-3.9977 2.9 6.0462 6.0462 0 0 0 .7427 7.0966 5.98 5.98 0 0 0 .511 4.9107 6.051 6.051 0 0 0 6.5146 2.9001A5.9847 5.9847 0 0 0 13.2599 24a6.0557 6.0557 0 0 0 5.7718-4.2058 5.9894 5.9894 0 0 0 3.9977-2.9001 6.0557 6.0557 0 0 0-.7475-7.0729zm-9.022 12.6081a4.4755 4.4755 0 0 1-2.8764-1.0408l.1419-.0804 4.7783-2.7582a.7948.7948 0 0 0 .3927-.6813v-6.7369l2.02 1.1686a.071.071 0 0 1 .038.052v5.5826a4.504 4.504 0 0 1-4.4945 4.4944zm-9.6607-4.1254a4.4708 4.4708 0 0 1-.5346-3.0137l.142.0852 4.783 2.7582a.7712.7712 0 0 0 .7806 0l5.8428-3.3685v2.3324a.0804.0804 0 0 1-.0332.0615L9.74 19.9502a4.4992 4.4992 0 0 1-6.1408-1.6464zM2.3408 7.8956a4.485 4.485 0 0 1 2.3655-1.9728V11.6a.7664.7664 0 0 0 .3879.6765l5.8144 3.3543-2.0201 1.1685a.0757.0757 0 0 1-.071 0l-4.8303-2.7865A4.504 4.504 0 0 1 2.3408 7.8956zm16.5963 3.8558L13.1038 8.364l2.0201-1.1685a.0757.0757 0 0 1 .071 0l4.8303 2.7913a4.4944 4.4944 0 0 1-.6765 8.1042v-5.6772a.79.79 0 0 0-.4043-.6813zm2.0107-3.0231l-.142-.0852-4.7735-2.7818a.7759.7759 0 0 0-.7854 0L9.409 9.2297V6.8974a.0662.0662 0 0 1 .0284-.0615l4.8303-2.7866a4.4992 4.4992 0 0 1 6.6802 4.66zM8.3065 12.863l-2.02-1.1638a.0804.0804 0 0 1-.038-.0567V6.0742a4.4992 4.4992 0 0 1 7.3757-3.4537l-.142.0805L8.704 5.459a.7948.7948 0 0 0-.3927.6813zm1.0976-2.3654l2.602-1.4998 2.6069 1.4998v2.9994l-2.5974 1.4997-2.6067-1.4997Z" fill="#10a37f"/>
        </svg>
        <span class="font-medium text-gray-700">ChatGPT</span>
      </div>
      <div class="flex items-center gap-2">
        <!-- Claude / Anthropic logo (Bootstrap Icons) -->
        <svg class="w-6 h-6" viewBox="0 0 16 16" fill="#D97757" xmlns="http://www.w3.org/2000/svg">
          <path d="m3.127 10.604 3.135-1.76.053-.153-.053-.085H6.11l-.525-.032-1.791-.048-1.554-.065-1.505-.08-.38-.081L0 7.832l.036-.234.32-.214.455.04 1.009.069 1.513.105 1.097.064 1.626.17h.259l.036-.105-.089-.065-.068-.064-1.566-1.062-1.695-1.121-.887-.646-.48-.327-.243-.306-.104-.67.435-.48.585.04.15.04.593.456 1.267.981 1.654 1.218.242.202.097-.068.012-.049-.109-.181-.9-1.626-.96-1.655-.428-.686-.113-.411a2 2 0 0 1-.068-.484l.496-.674L4.446 0l.662.089.279.242.411.94.666 1.48 1.033 2.014.302.597.162.553.06.17h.105v-.097l.085-1.134.157-1.392.154-1.792.052-.504.25-.605.497-.327.387.186.319.456-.045.294-.19 1.23-.37 1.93-.243 1.29h.142l.161-.16.654-.868 1.097-1.372.484-.545.565-.601.363-.287h.686l.505.751-.226.775-.707.895-.585.759-.839 1.13-.524.904.048.072.125-.012 1.897-.403 1.024-.186 1.223-.21.553.258.06.263-.218.536-1.307.323-1.533.307-2.284.54-.028.02.032.04 1.029.098.44.024h1.077l2.005.15.525.346.315.424-.053.323-.807.411-3.631-.863-.872-.218h-.12v.073l.726.71 1.331 1.202 1.667 1.55.084.383-.214.302-.226-.032-1.464-1.101-.565-.497-1.28-1.077h-.084v.113l.295.432 1.557 2.34.08.718-.112.234-.404.141-.444-.08-.911-1.28-.94-1.44-.759-1.291-.093.053-.448 4.821-.21.246-.484.186-.403-.307-.214-.496.214-.98.258-1.28.21-1.016.19-1.263.112-.42-.008-.028-.092.012-.953 1.307-1.448 1.957-1.146 1.227-.274.109-.477-.247.045-.44.266-.39 1.586-2.018.956-1.25.617-.723-.004-.105h-.036l-4.212 2.736-.75.096-.324-.302.04-.496.154-.162 1.267-.871z"/>
        </svg>
        <span class="font-medium text-gray-700">Claude</span>
      </div>
      <div class="flex items-center gap-2">
        <!-- Microsoft Copilot logo (stylized infinity ribbon) -->
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <linearGradient id="copilot-grad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#6BD9BF"/>
              <stop offset="25%" stop-color="#4ECBDF"/>
              <stop offset="50%" stop-color="#8B7FCF"/>
              <stop offset="75%" stop-color="#E178A9"/>
              <stop offset="100%" stop-color="#F4A462"/>
            </linearGradient>
          </defs>
          <path d="M17.5 6.5c-2.5 0-4 1.5-5.5 3.5-1.5-2-3-3.5-5.5-3.5C3.5 6.5 1 9 1 12s2.5 5.5 5.5 5.5c2.5 0 4-1.5 5.5-3.5 1.5 2 3 3.5 5.5 3.5 3 0 5.5-2.5 5.5-5.5s-2.5-5.5-5.5-5.5zm-11 8.5c-1.7 0-3-1.3-3-3s1.3-3 3-3c1.5 0 2.5 1 3.5 2.5l.5.5-.5.5c-1 1.5-2 2.5-3.5 2.5zm11 0c-1.5 0-2.5-1-3.5-2.5l-.5-.5.5-.5c1-1.5 2-2.5 3.5-2.5 1.7 0 3 1.3 3 3s-1.3 3-3 3z" fill="url(#copilot-grad)"/>
        </svg>
        <span class="font-medium text-gray-700">Copilot</span>
      </div>
      <div class="flex items-center gap-2">
        <!-- Generic AI icon -->
        <svg class="w-6 h-6 text-gray-500" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor"/>
        </svg>
        <span class="font-medium text-gray-700">{lang === 'nl' ? 'Andere AI\'s' : 'Other AIs'}</span>
      </div>
    </div>
  </div>

  <!-- Demo section -->
  <div id="demo" class="py-16 md:py-24">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-4">
      {lang === 'nl' ? 'Vraag wat je wilt weten' : 'Ask what you want to know'}
    </h2>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
      {lang === 'nl' ? 'Geen rapporten draaien, geen exports maken. Stel gewoon je vraag.' : 'No running reports, no creating exports. Just ask your question.'}
    </p>

    <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-start gap-3 mb-4">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-blue-600 text-sm">{lang === 'nl' ? 'Jij' : 'You'}</span>
          </div>
          <p class="text-gray-800 bg-gray-50 rounded-lg p-3 flex-1">
            "{lang === 'nl' ? 'Welke facturen staan nog open?' : 'Which invoices are still outstanding?'}"
          </p>
        </div>
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-green-600 text-sm">AI</span>
          </div>
          <div class="text-gray-800 bg-green-50 rounded-lg p-3 flex-1">
            <p>{lang === 'nl' ? 'Je hebt 3 openstaande facturen:' : 'You have 3 outstanding invoices:'}</p>
            <ul class="mt-2 text-sm space-y-1">
              <li>• {lang === 'nl' ? 'Klant BV - €2.450 (15 dagen te laat)' : 'Client Inc - €2,450 (15 days overdue)'}</li>
              <li>• ABC Ltd - €890 ({lang === 'nl' ? 'vervalt morgen' : 'due tomorrow'})</li>
              <li>• Demo Co - €1.200 ({lang === 'nl' ? 'nog 7 dagen' : '7 days left'})</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-start gap-3 mb-4">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-blue-600 text-sm">{lang === 'nl' ? 'Jij' : 'You'}</span>
          </div>
          <p class="text-gray-800 bg-gray-50 rounded-lg p-3 flex-1">
            "{lang === 'nl' ? 'Wat is de omzet van vorige maand?' : 'What was last month\'s revenue?'}"
          </p>
        </div>
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-green-600 text-sm">AI</span>
          </div>
          <div class="text-gray-800 bg-green-50 rounded-lg p-3 flex-1">
            <p>
              {lang === 'nl' ? 'De omzet van december 2025 was' : 'December 2025 revenue was'} <strong>€47.250</strong>
            </p>
            <p class="mt-2 text-sm text-gray-600">
              {lang === 'nl' ? "Dat is 12% meer dan november (€42.150)" : "That's 12% more than November (€42,150)"}
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-start gap-3 mb-4">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-blue-600 text-sm">{lang === 'nl' ? 'Jij' : 'You'}</span>
          </div>
          <p class="text-gray-800 bg-gray-50 rounded-lg p-3 flex-1">
            "{lang === 'nl' ? 'Wie zijn mijn top 5 klanten?' : 'Who are my top 5 customers?'}"
          </p>
        </div>
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-green-600 text-sm">AI</span>
          </div>
          <div class="text-gray-800 bg-green-50 rounded-lg p-3 flex-1">
            <p>{lang === 'nl' ? 'Top 5 klanten op basis van omzet (2025):' : 'Top 5 customers by revenue (2025):'}</p>
            <ol class="mt-2 text-sm space-y-1">
              <li>1. {lang === 'nl' ? 'Groot Bedrijf BV' : 'Big Company Inc'} - €89.000</li>
              <li>2. Tech Solutions - €67.500</li>
              <li>3. Retail Co - €45.200</li>
              <li>4. Service Plus - €38.900</li>
              <li>5. Marketing BV - €31.400</li>
            </ol>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-start gap-3 mb-4">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-blue-600 text-sm">{lang === 'nl' ? 'Jij' : 'You'}</span>
          </div>
          <p class="text-gray-800 bg-gray-50 rounded-lg p-3 flex-1">
            "{lang === 'nl' ? 'Stuur een herinnering naar klanten met facturen > 30 dagen' : 'Send a reminder to customers with invoices > 30 days'}"
          </p>
        </div>
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-yellow-600 text-sm">AI</span>
          </div>
          <div class="text-gray-800 bg-yellow-50 rounded-lg p-3 flex-1">
            <p>
              {lang === 'nl'
                ? 'Ik kan alleen data lezen, niet aanpassen. Maar ik kan je wel een lijst geven van de 4 klanten met facturen ouder dan 30 dagen, inclusief contactgegevens.'
                : "I can only read data, not modify it. But I can give you a list of the 4 customers with invoices older than 30 days, including contact details."}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Features -->
  <div class="py-16 md:py-24 bg-gray-50 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-4">
      {lang === 'nl' ? 'Waarom ondernemers hierop overstappen' : 'Why business owners switch to this'}
    </h2>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
      {lang === 'nl'
        ? 'Direct antwoord op je vraag, zonder te zoeken in rapporten of exports te maken.'
        : 'Get immediate answers to your questions, without searching reports or creating exports.'}
    </p>

    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto">
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">{lang === 'nl' ? 'Jouw data blijft veilig' : 'Your data stays safe'}</h3>
        <p class="mt-2 text-gray-600">
          {lang === 'nl'
            ? 'Je data blijft bij Exact Online. Wij kunnen alleen lezen, nooit boekingen aanpassen of verwijderen. Technisch onmogelijk gemaakt.'
            : 'Your data stays with Exact Online. We can only read, never modify or delete bookings. Made technically impossible.'}
        </p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">{lang === 'nl' ? 'Direct antwoord' : 'Immediate answers'}</h3>
        <p class="mt-2 text-gray-600">
          {lang === 'nl'
            ? 'Stel een vraag, krijg direct antwoord. Geen rapporten draaien of exporteren.'
            : 'Ask a question, get an immediate answer. No running or exporting reports.'}
        </p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">{lang === 'nl' ? 'Gewoon Nederlands' : 'Plain English'}</h3>
        <p class="mt-2 text-gray-600">
          {lang === 'nl'
            ? 'Vraag zoals je aan een collega zou vragen. Geen formules, filters of technische kennis nodig.'
            : 'Ask like you would ask a colleague. No formulas, filters or technical knowledge needed.'}
        </p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">{lang === 'nl' ? 'Al je gegevens bereikbaar' : 'All your data accessible'}</h3>
        <p class="mt-2 text-gray-600">
          {lang === 'nl'
            ? 'Facturen, klanten, leveranciers, grootboek, projecten en meer. Vraag wat je nodig hebt.'
            : 'Invoices, customers, suppliers, general ledger, projects and more. Ask what you need.'}
        </p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">{lang === 'nl' ? 'Binnen 2 minuten klaar' : 'Ready within 2 minutes'}</h3>
        <p class="mt-2 text-gray-600">
          {lang === 'nl'
            ? 'Voeg de URL toe, log in via je browser, stel je eerste vraag. Geen IT-kennis nodig.'
            : 'Add the URL, log in via your browser, ask your first question. No IT knowledge needed.'}
        </p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">

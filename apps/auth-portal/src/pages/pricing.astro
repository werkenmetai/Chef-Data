    // Upgrade modal controls
    const upgradeModal = document.getElementById('upgradeModal');
    const closeUpgradeModal = document.getElementById('closeUpgradeModal');
    const upgradeForm = document.getElementById('upgradeRequestForm') as HTMLFormElement;
    const upgradePlanInput = document.getElementById('upgradePlan') as HTMLInputElement;
    const selectedPlanName = document.getElementById('selectedPlanName');
    const upgradeResult = document.getElementById('upgradeResult');
    const upgradeBtns = document.querySelectorAll('.upgrade-btn');

    const planNames: Record<string, string> = {
      starter: 'Starter',
      pro: 'Pro',
    };

    function openUpgradeModal(plan: string) {
      if (upgradePlanInput) upgradePlanInput.value = plan;
      if (selectedPlanName) selectedPlanName.textContent = planNames[plan] || plan;
      upgradeModal?.classList.remove('hidden');
    }

    function closeModal() {
      upgradeModal?.classList.add('hidden');
      upgradeForm?.reset();
      if (upgradeResult) {
        upgradeResult.classList.add('hidden');
        upgradeResult.innerHTML = '';
      }
    }

    upgradeBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const plan = (btn as HTMLElement).dataset.plan || 'pro';
        openUpgradeModal(plan);
      });
    });

    closeUpgradeModal?.addEventListener('click', closeModal);
    upgradeModal?.addEventListener('click', (e) => { if (e.target === upgradeModal) closeModal(); });

    // Handle upgrade request form
    upgradeForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitBtn = document.getElementById('submitUpgradeRequest') as HTMLButtonElement;
      const emailInput = document.getElementById('upgradeEmail') as HTMLInputElement;
      const plan = upgradePlanInput?.value || 'pro';
      const email = emailInput?.value;

      if (!email) return;

      submitBtn.disabled = true;
      submitBtn.textContent = 'Verzenden...';

      try {
        // Send upgrade request via message API
        const response = await fetch('/api/messages/send', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            category: 'upgrade',
            subject: `Upgrade aanvraag: ${planNames[plan] || plan}`,
            content: `Gebruiker wil upgraden naar ${planNames[plan] || plan}.\n\nE-mail: ${email}`,
          }),
        });

        const result = await response.json() as { success: boolean; error?: string };

        if (upgradeResult) {
          upgradeResult.classList.remove('hidden');
          if (result.success) {
            upgradeResult.className = 'p-4 bg-green-50 border border-green-200 rounded-lg';
            upgradeResult.innerHTML = '<p class="text-green-800 text-sm"><strong>Bedankt!</strong> We nemen contact met je op zodra de upgrade beschikbaar is.</p>';
            setTimeout(closeModal, 3000);
          } else {
            upgradeResult.className = 'p-4 bg-red-50 border border-red-200 rounded-lg';
            upgradeResult.innerHTML = `<p class="text-red-800 text-sm">Er ging iets mis: ${result.error || 'Onbekende fout'}</p>`;
            submitBtn.disabled = false;
            submitBtn.textContent = 'Probeer gratis';
          }
        }
      } catch (error) {
        if (upgradeResult) {
          upgradeResult.classList.remove('hidden');
          upgradeResult.className = 'p-4 bg-red-50 border border-red-200 rounded-lg';
          upgradeResult.innerHTML = '<p class="text-red-800 text-sm">Netwerkfout. Probeer het later opnieuw.</p>';
        }
        submitBtn.disabled = false;
        submitBtn.textContent = 'Probeer gratis';
      }
    });
  </script>

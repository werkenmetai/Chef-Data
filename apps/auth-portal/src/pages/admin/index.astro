---
/**
 * Admin Dashboard - Klantreis & Stats Overview
 *
 * Brainstorm Beslissing 3 (2 feb 2026):
 * - Alle touchpoints visualiseren
 * - Conversie per stap
 * - Alle relevante metrics
 */
import Layout from '../../layouts/Layout.astro';
import { Database } from '../../lib/database';
// AdminAppLauncher now in Layout.astro header

const env = Astro.locals.runtime?.env;
let isAdmin = false;
let statsLoaded = false;
let stats = {
  // Users
  totalUsers: 0,
  usersToday: 0,
  usersThisWeek: 0,
  usersThisMonth: 0,
  // Connections
  totalConnections: 0,
  activeConnections: 0,
  // API
  apiCallsToday: 0,
  apiCallsWeek: 0,
  // Communications
  totalCommunications: 0,
  unreadInbound: 0,
  // Support
  openTickets: 0,
  resolvedToday: 0,
  // Errors
  recentErrors: 0,
  // Plans
  freeUsers: 0,
  paidUsers: 0,
  // Funnel
  usersWithConnection: 0,
  usersWithApiKey: 0,
  usersWithApiCalls: 0,
};

let recentUsers: Array<{
  id: string;
  email: string;
  name: string | null;
  plan: string;
  created_at: string;
}> = [];

let recentCommunications: Array<{
  id: string;
  type: string;
  direction: string;
  subject: string | null;
  user_email: string | null;
  created_at: string;
}> = [];

let attentionItems: Array<{
  type: 'error' | 'warning' | 'info';
  title: string;
  description: string;
  link?: string;
}> = [];

try {
  if (env?.DB) {
    const db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);

    const sessionId = Astro.cookies.get('session_id')?.value;
    if (sessionId) {
      const session = await db.validateSession(sessionId);
      if (session) {
        const adminEmails = (env.ADMIN_EMAILS || '')
          .split(',')
          .map((e: string) => e.trim().toLowerCase())
          .filter((e: string) => e.length > 0);

        isAdmin = adminEmails.includes(session.user.email.toLowerCase());

        if (isAdmin) {
          // Helper to safely execute queries (returns null on error)
          async function safeQuery<T>(query: () => Promise<T>): Promise<T | null> {
            try {
              return await query();
            } catch (e) {
              console.error('Query failed:', e);
              return null;
            }
          }

          // Fetch all stats in parallel with error handling per query
          const [
            totalUsersResult,
            usersTodayResult,
            usersWeekResult,
            usersMonthResult,
            totalConnectionsResult,
            activeConnectionsResult,
            apiCallsTodayResult,
            apiCallsWeekResult,
            totalCommunicationsResult,
            unreadInboundResult,
            openTicketsResult,
            resolvedTodayResult,
            recentErrorsResult,
            freeUsersResult,
            paidUsersResult,
            usersWithConnectionResult,
            usersWithApiKeyResult,
            usersWithApiCallsResult,
            recentUsersResult,
            recentCommunicationsResult
          ] = await Promise.all([
            // Total users
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM users").first<{ count: number }>()),
            // Users today
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM users WHERE created_at > datetime('now', '-1 day')").first<{ count: number }>()),
            // Users this week
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM users WHERE created_at > datetime('now', '-7 days')").first<{ count: number }>()),
            // Users this month
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM users WHERE created_at > datetime('now', '-30 days')").first<{ count: number }>()),
            // Total connections
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM connections").first<{ count: number }>()),
            // Active connections (used in last 7 days)
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM connections WHERE last_used_at > datetime('now', '-7 days')").first<{ count: number }>()),
            // API calls today
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM api_usage WHERE created_at > datetime('now', '-1 day')").first<{ count: number }>()),
            // API calls this week
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM api_usage WHERE created_at > datetime('now', '-7 days')").first<{ count: number }>()),
            // Total communications (graceful fallback if table doesn't exist)
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM communication_events").first<{ count: number }>()),
            // Unread inbound - simplified query without archived column for compatibility
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM communication_events WHERE direction = 'out'").first<{ count: number }>()),
            // Open support tickets
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM support_conversations WHERE status IN ('open', 'waiting_support')").first<{ count: number }>()),
            // Resolved today
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM support_conversations WHERE resolved_at > datetime('now', '-1 day')").first<{ count: number }>()),
            // Recent errors (last 24h) - graceful fallback
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM support_error_log WHERE created_at > datetime('now', '-1 day')").first<{ count: number }>()),
            // Free users
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM users WHERE plan = 'free'").first<{ count: number }>()),
            // Paid users
            safeQuery(() => env.DB.prepare("SELECT COUNT(*) as count FROM users WHERE plan != 'free'").first<{ count: number }>()),
            // Funnel: users with at least 1 connection
            safeQuery(() => env.DB.prepare("SELECT COUNT(DISTINCT user_id) as count FROM connections").first<{ count: number }>()),
            // Funnel: users with at least 1 API key
            safeQuery(() => env.DB.prepare("SELECT COUNT(DISTINCT user_id) as count FROM api_keys").first<{ count: number }>()),
            // Funnel: users with at least 1 API call
            safeQuery(() => env.DB.prepare("SELECT COUNT(DISTINCT user_id) as count FROM api_usage").first<{ count: number }>()),
            // Recent users
            safeQuery(() => env.DB.prepare(`
              SELECT id, email, name, plan, created_at
              FROM users
              ORDER BY created_at DESC
              LIMIT 5
            `).all<{ id: string; email: string; name: string | null; plan: string; created_at: string }>()),
            // Recent communications
            safeQuery(() => env.DB.prepare(`
              SELECT ce.id, ce.type, ce.direction, ce.subject, ce.created_at, u.email as user_email
              FROM communication_events ce
              LEFT JOIN users u ON ce.user_id = u.id
              ORDER BY ce.created_at DESC
              LIMIT 5
            `).all<{ id: string; type: string; direction: string; subject: string | null; user_email: string | null; created_at: string }>())
          ]);

          stats = {
            totalUsers: totalUsersResult?.count || 0,
            usersToday: usersTodayResult?.count || 0,
            usersThisWeek: usersWeekResult?.count || 0,
            usersThisMonth: usersMonthResult?.count || 0,
            totalConnections: totalConnectionsResult?.count || 0,
            activeConnections: activeConnectionsResult?.count || 0,
            apiCallsToday: apiCallsTodayResult?.count || 0,
            apiCallsWeek: apiCallsWeekResult?.count || 0,
            totalCommunications: totalCommunicationsResult?.count || 0,
            unreadInbound: unreadInboundResult?.count || 0,
            openTickets: openTicketsResult?.count || 0,
            resolvedToday: resolvedTodayResult?.count || 0,
            recentErrors: recentErrorsResult?.count || 0,
            freeUsers: freeUsersResult?.count || 0,
            paidUsers: paidUsersResult?.count || 0,
            usersWithConnection: usersWithConnectionResult?.count || 0,
            usersWithApiKey: usersWithApiKeyResult?.count || 0,
            usersWithApiCalls: usersWithApiCallsResult?.count || 0,
          };
          statsLoaded = true;

          recentUsers = recentUsersResult?.results || [];
          recentCommunications = recentCommunicationsResult?.results || [];

          // Build attention items
          if (stats.openTickets > 0) {
            attentionItems.push({
              type: 'warning',
              title: `${stats.openTickets} open support ticket${stats.openTickets > 1 ? 's' : ''}`,
              description: 'Wacht op reactie',
              link: '/admin/support/conversations'
            });
          }

          if (stats.unreadInbound > 5) {
            attentionItems.push({
              type: 'info',
              title: `${stats.unreadInbound} ongelezen berichten`,
              description: 'In inbox',
              link: '/admin/inbox'
            });
          }

          if (stats.recentErrors > 0) {
            attentionItems.push({
              type: 'error',
              title: `${stats.recentErrors} errors (24u)`,
              description: 'Check error logs',
              link: '/admin/support/index'
            });
          }
        }
      }
    }
  }
} catch (e) {
  console.error('Admin dashboard error:', e);
  // For debugging in development
  if (e instanceof Error) {
    console.error('Error message:', e.message);
    console.error('Error stack:', e.stack);
  }
}

// Helper functions
function formatTimeAgo(dateString: string): string {
  const date = new Date(dateString);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffMins = Math.floor(diffMs / 60000);
  const diffHours = Math.floor(diffMs / 3600000);
  const diffDays = Math.floor(diffMs / 86400000);

  if (diffMins < 60) return `${diffMins}m`;
  if (diffHours < 24) return `${diffHours}u`;
  if (diffDays < 7) return `${diffDays}d`;
  return date.toLocaleDateString('nl-NL', { day: 'numeric', month: 'short' });
}

function calcPercentage(part: number, total: number): number {
  if (total === 0) return 0;
  return Math.round((part / total) * 100);
}

const planColors: Record<string, string> = {
  free: 'bg-gray-100 text-gray-700',
  starter: 'bg-green-100 text-green-700',
  pro: 'bg-blue-100 text-blue-700',
  enterprise: 'bg-purple-100 text-purple-700',
};
---

<Layout title="Admin Dashboard">
  <div class="max-w-7xl mx-auto px-4 py-6">
    {!isAdmin ? (
      <div class="bg-red-50 border border-red-200 rounded-xl p-8 text-center">
        <h1 class="text-2xl font-bold text-red-900 mb-4">Toegang Geweigerd</h1>
        <p class="text-red-700">Je hebt geen admin toegang.</p>
        <a href="/dashboard" class="inline-block mt-4 text-red-600 hover:underline">
          Terug naar Dashboard
        </a>
      </div>
    ) : !statsLoaded ? (
      <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-8 text-center">
        <p class="text-yellow-700">Kon statistieken niet laden.</p>
      </div>
    ) : (
      <>
        {/* Header */}
        <div class="mb-6">
          <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
          <p class="text-sm text-gray-500">Overzicht van alle klantstromen en cijfers</p>
        </div>

        {/* Attention Items */}
        {attentionItems.length > 0 && (
          <div class="mb-6 space-y-2">
            {attentionItems.map((item) => (
              <a
                href={item.link || '#'}
                class={`block p-3 rounded-lg border transition-colors ${
                  item.type === 'error' ? 'bg-red-50 border-red-200 hover:bg-red-100' :
                  item.type === 'warning' ? 'bg-amber-50 border-amber-200 hover:bg-amber-100' :
                  'bg-blue-50 border-blue-200 hover:bg-blue-100'
                }`}
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <span class={`text-lg ${
                      item.type === 'error' ? 'text-red-500' :
                      item.type === 'warning' ? 'text-amber-500' :
                      'text-blue-500'
                    }`}>
                      {item.type === 'error' ? '⚠️' : item.type === 'warning' ? '⏰' : 'ℹ️'}
                    </span>
                    <span class="font-medium text-gray-900">{item.title}</span>
                    <span class="text-sm text-gray-500">{item.description}</span>
                  </div>
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        )}

        {/* Main Stats Grid */}
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <div class="text-sm text-gray-500 mb-1">Gebruikers</div>
            <div class="text-2xl font-bold text-gray-900">{stats.totalUsers}</div>
            <div class="text-xs text-green-600 mt-1">+{stats.usersThisWeek} deze week</div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <div class="text-sm text-gray-500 mb-1">Connecties</div>
            <div class="text-2xl font-bold text-gray-900">{stats.totalConnections}</div>
            <div class="text-xs text-gray-500 mt-1">{stats.activeConnections} actief (7d)</div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <div class="text-sm text-gray-500 mb-1">API Calls</div>
            <div class="text-2xl font-bold text-gray-900">{stats.apiCallsWeek.toLocaleString()}</div>
            <div class="text-xs text-gray-500 mt-1">{stats.apiCallsToday} vandaag</div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <div class="text-sm text-gray-500 mb-1">Berichten</div>
            <div class="text-2xl font-bold text-gray-900">{stats.totalCommunications}</div>
            <div class="text-xs text-gray-500 mt-1">{stats.unreadInbound} inbox</div>
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          {/* Customer Journey Funnel */}
          <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Customer Journey</h2>

            <div class="space-y-4">
              {/* Step 1: Signup */}
              <div class="relative">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-sm font-medium text-gray-700">1. Signup</span>
                  <span class="text-sm text-gray-500">{stats.totalUsers} users</span>
                </div>
                <div class="h-8 bg-gray-100 rounded-lg overflow-hidden">
                  <div
                    class="h-full bg-blue-500 rounded-lg flex items-center justify-end pr-2"
                    style={`width: 100%`}
                  >
                    <span class="text-xs text-white font-medium">100%</span>
                  </div>
                </div>
              </div>

              {/* Step 2: Connected */}
              <div class="relative">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-sm font-medium text-gray-700">2. Exact Connected</span>
                  <span class="text-sm text-gray-500">{stats.usersWithConnection} users</span>
                </div>
                <div class="h-8 bg-gray-100 rounded-lg overflow-hidden">
                  <div
                    class="h-full bg-blue-500 rounded-lg flex items-center justify-end pr-2"
                    style={`width: ${calcPercentage(stats.usersWithConnection, stats.totalUsers)}%`}
                  >
                    <span class="text-xs text-white font-medium">{calcPercentage(stats.usersWithConnection, stats.totalUsers)}%</span>
                  </div>
                </div>
              </div>

              {/* Step 3: API Key Created */}
              <div class="relative">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-sm font-medium text-gray-700">3. API Key Created</span>
                  <span class="text-sm text-gray-500">{stats.usersWithApiKey} users</span>
                </div>
                <div class="h-8 bg-gray-100 rounded-lg overflow-hidden">
                  <div
                    class="h-full bg-blue-500 rounded-lg flex items-center justify-end pr-2"
                    style={`width: ${calcPercentage(stats.usersWithApiKey, stats.totalUsers)}%`}
                  >
                    <span class="text-xs text-white font-medium">{calcPercentage(stats.usersWithApiKey, stats.totalUsers)}%</span>
                  </div>
                </div>
              </div>

              {/* Step 4: First API Call */}
              <div class="relative">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-sm font-medium text-gray-700">4. First API Call (Active)</span>
                  <span class="text-sm text-gray-500">{stats.usersWithApiCalls} users</span>
                </div>
                <div class="h-8 bg-gray-100 rounded-lg overflow-hidden">
                  <div
                    class="h-full bg-green-500 rounded-lg flex items-center justify-end pr-2"
                    style={`width: ${calcPercentage(stats.usersWithApiCalls, stats.totalUsers)}%`}
                  >
                    <span class="text-xs text-white font-medium">{calcPercentage(stats.usersWithApiCalls, stats.totalUsers)}%</span>
                  </div>
                </div>
              </div>

              {/* Step 5: Paid */}
              <div class="relative">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-sm font-medium text-gray-700">5. Paid Plan</span>
                  <span class="text-sm text-gray-500">{stats.paidUsers} users</span>
                </div>
                <div class="h-8 bg-gray-100 rounded-lg overflow-hidden">
                  <div
                    class="h-full bg-purple-500 rounded-lg flex items-center justify-end pr-2"
                    style={`width: ${Math.max(calcPercentage(stats.paidUsers, stats.totalUsers), 2)}%`}
                  >
                    <span class="text-xs text-white font-medium">{calcPercentage(stats.paidUsers, stats.totalUsers)}%</span>
                  </div>
                </div>
              </div>
            </div>

            {/* Drop-off Analysis */}
            <div class="mt-6 pt-4 border-t border-gray-100">
              <h3 class="text-sm font-medium text-gray-700 mb-2">Drop-off Analyse</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-500">Signup → Connect</span>
                  <span class={stats.usersWithConnection < stats.totalUsers * 0.5 ? 'text-red-600 font-medium' : 'text-green-600'}>
                    {100 - calcPercentage(stats.usersWithConnection, stats.totalUsers)}% verlies
                  </span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-500">Connect → Active</span>
                  <span class={stats.usersWithApiCalls < stats.usersWithConnection * 0.5 ? 'text-red-600 font-medium' : 'text-green-600'}>
                    {100 - calcPercentage(stats.usersWithApiCalls, stats.usersWithConnection || 1)}% verlies
                  </span>
                </div>
              </div>
            </div>
          </div>

          {/* Side Panel */}
          <div class="space-y-6">
            {/* Plan Distribution */}
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
              <h2 class="text-sm font-semibold text-gray-700 mb-3">Plan Verdeling</h2>
              <div class="space-y-2">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600">Free</span>
                  <span class="text-sm font-medium">{stats.freeUsers}</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600">Betaald</span>
                  <span class="text-sm font-medium text-green-600">{stats.paidUsers}</span>
                </div>
                <div class="h-2 bg-gray-100 rounded-full overflow-hidden mt-2">
                  <div
                    class="h-full bg-green-500"
                    style={`width: ${calcPercentage(stats.paidUsers, stats.totalUsers)}%`}
                  ></div>
                </div>
              </div>
            </div>

            {/* Recent Users */}
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
              <h2 class="text-sm font-semibold text-gray-700 mb-3">Nieuwe Gebruikers</h2>
              <div class="space-y-2">
                {recentUsers.length === 0 ? (
                  <p class="text-sm text-gray-400">Geen recente signups</p>
                ) : (
                  recentUsers.map((user) => (
                    <a
                      href={`/admin/customer/${user.id}`}
                      class="flex items-center justify-between p-2 -mx-2 rounded-lg hover:bg-gray-50 transition-colors"
                    >
                      <div class="min-w-0">
                        <div class="text-sm font-medium text-gray-900 truncate">{user.name || user.email}</div>
                        {user.name && <div class="text-xs text-gray-500 truncate">{user.email}</div>}
                      </div>
                      <div class="flex items-center gap-2 flex-shrink-0">
                        <span class={`px-1.5 py-0.5 rounded text-xs ${planColors[user.plan] || 'bg-gray-100 text-gray-700'}`}>
                          {user.plan}
                        </span>
                        <span class="text-xs text-gray-400">{formatTimeAgo(user.created_at)}</span>
                      </div>
                    </a>
                  ))
                )}
              </div>
            </div>

            {/* Recent Communications */}
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
              <div class="flex items-center justify-between mb-3">
                <h2 class="text-sm font-semibold text-gray-700">Recente Berichten</h2>
                <a href="/admin/inbox" class="text-xs text-exact-blue hover:underline">Alles →</a>
              </div>
              <div class="space-y-2">
                {recentCommunications.length === 0 ? (
                  <p class="text-sm text-gray-400">Geen berichten</p>
                ) : (
                  recentCommunications.map((comm) => (
                    <a
                      href={`/admin/inbox/${comm.id}`}
                      class="flex items-center justify-between p-2 -mx-2 rounded-lg hover:bg-gray-50 transition-colors"
                    >
                      <div class="flex items-center gap-2 min-w-0">
                        <span class={`w-2 h-2 rounded-full flex-shrink-0 ${
                          comm.type === 'email' ? 'bg-blue-500' :
                          comm.type === 'support' ? 'bg-purple-500' :
                          'bg-amber-500'
                        }`}></span>
                        <span class="text-sm text-gray-700 truncate">
                          {comm.subject || comm.user_email || 'Geen onderwerp'}
                        </span>
                      </div>
                      <span class="text-xs text-gray-400 flex-shrink-0">{formatTimeAgo(comm.created_at)}</span>
                    </a>
                  ))
                )}
              </div>
            </div>
          </div>
        </div>

        {/* Quick Links */}
        <div class="mt-6 grid grid-cols-2 md:grid-cols-4 gap-4">
          <a href="/admin/inbox" class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 hover:border-exact-blue transition-colors group">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center group-hover:bg-blue-100 transition-colors">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-900">Inbox</div>
                <div class="text-xs text-gray-500">{stats.unreadInbound} nieuw</div>
              </div>
            </div>
          </a>

          <a href="/admin/support/conversations" class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 hover:border-exact-blue transition-colors group">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center group-hover:bg-purple-100 transition-colors">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-900">Support</div>
                <div class="text-xs text-gray-500">{stats.openTickets} open</div>
              </div>
            </div>
          </a>

          <a href="/admin/feedback" class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 hover:border-exact-blue transition-colors group">

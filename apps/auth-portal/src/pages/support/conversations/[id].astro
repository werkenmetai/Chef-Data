---
import Layout from '../../../layouts/Layout.astro';
import { Database, type SupportConversation, type SupportMessage } from '../../../lib/database';

const env = Astro.locals.runtime?.env;
const { id } = Astro.params;

let db: Database | null = null;
let isAuthenticated = false;
let conversation: SupportConversation | null = null;
let messages: SupportMessage[] = [];
let error: string | null = null;
let userId: string | null = null;

try {
  if (env?.DB && id) {
    db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);

    const sessionId = Astro.cookies.get('session_id')?.value;
    if (sessionId) {
      const session = await db.validateSession(sessionId);
      if (session) {
        isAuthenticated = true;
        userId = session.user.id;

        const data = await db.getConversationWithMessages(id);
        if (data) {
          if (data.conversation.user_id !== session.user.id) {
            error = 'Je hebt geen toegang tot dit gesprek.';
          } else {
            conversation = data.conversation;
            messages = data.messages;
            // Mark as read
            await db.markMessagesRead(id, session.user.id);
          }
        } else {
          error = 'Gesprek niet gevonden.';
        }
      }
    }
  }
} catch (e) {
  console.error('Conversation page error:', e);
  error = 'Er is een fout opgetreden.';
}

const statusColors: Record<string, { bg: string; text: string; label: string }> = {
  open: { bg: 'bg-blue-100', text: 'text-blue-800', label: 'Open' },
  waiting_user: { bg: 'bg-yellow-100', text: 'text-yellow-800', label: 'Wacht op jou' },
  waiting_support: { bg: 'bg-purple-100', text: 'text-purple-800', label: 'Wacht op support' },
  resolved: { bg: 'bg-green-100', text: 'text-green-800', label: 'Opgelost' },
  closed: { bg: 'bg-gray-100', text: 'text-gray-800', label: 'Gesloten' },
};

const senderStyles: Record<string, { align: string; bg: string; border: string; name: string }> = {
  user: { align: 'items-end', bg: 'bg-exact-blue text-white', border: '', name: 'Jij' },
  ai: { align: 'items-start', bg: 'bg-gray-100 text-gray-900', border: 'border border-gray-200', name: 'Support AI' },
  admin: { align: 'items-start', bg: 'bg-purple-50 text-gray-900', border: 'border border-purple-200', name: 'Support Team' },
  system: { align: 'items-center', bg: 'bg-gray-50 text-gray-600', border: '', name: '' },
};

const isOpen = conversation && !['resolved', 'closed'].includes(conversation.status);
const showRating = conversation?.status === 'resolved' && !conversation.satisfaction_rating;
---

<Layout title={conversation?.subject || 'Gesprek'}>
  <div class="max-w-3xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
      <a href="/support/conversations" class="text-gray-400 hover:text-gray-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </a>
      <div class="flex-1">
        <div class="flex items-center gap-2">
          <h1 class="text-xl font-bold text-gray-900">{conversation?.subject || 'Gesprek'}</h1>
          {conversation && (
            <span class={`px-2 py-0.5 text-xs font-medium rounded ${statusColors[conversation.status].bg} ${statusColors[conversation.status].text}`}>
              {statusColors[conversation.status].label}
            </span>
          )}
        </div>
        {conversation && (
          <p class="text-sm text-gray-500">
            ID: {conversation.id.slice(0, 8)} • Aangemaakt: {new Date(conversation.created_at).toLocaleDateString('nl-NL')}
            {conversation.category && ` • ${conversation.category}`}
          </p>
        )}
      </div>
    </div>

    {!isAuthenticated ? (
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 text-center">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Inloggen Vereist</h2>
        <p class="text-gray-600 mb-6">Log in om dit gesprek te bekijken.</p>
        <a
          href="/connect"
          class="inline-block px-6 py-3 bg-exact-blue text-white font-semibold rounded-lg hover:bg-exact-dark transition-colors"
        >
          Inloggen
        </a>
      </div>
    ) : error ? (
      <div class="bg-red-50 border border-red-200 rounded-xl p-8 text-center">
        <h2 class="text-xl font-bold text-red-900 mb-4">Fout</h2>
        <p class="text-red-700 mb-6">{error}</p>
        <a
          href="/support/conversations"
          class="inline-block px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors"
        >
          Terug naar gesprekken
        </a>
      </div>
    ) : (
      <div class="space-y-6">
        <!-- Messages -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <div id="messagesContainer" class="space-y-4 max-h-[60vh] overflow-y-auto">
            {messages.map(msg => {
              const style = senderStyles[msg.sender_type] || senderStyles.system;
              const isSystem = msg.sender_type === 'system';

              return (
                <div class={`flex flex-col ${style.align}`}>
                  {!isSystem && (
                    <span class="text-xs text-gray-500 mb-1">
                      {style.name} • {new Date(msg.created_at).toLocaleTimeString('nl-NL', { hour: '2-digit', minute: '2-digit' })}
                    </span>
                  )}
                  <div class={`max-w-[85%] px-4 py-3 rounded-lg ${style.bg} ${style.border} ${isSystem ? 'text-sm italic' : ''}`}>
                    <div class="prose prose-sm max-w-none" set:html={
                      msg.content
                        .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                        .replace(/\[(.*?)\]\((.*?)\)/g, '<a href="$2" class="text-exact-blue underline">$1</a>')
                        .replace(/\n/g, '<br>')
                    } />

                    {/* AI quick actions */}
                    {msg.sender_type === 'ai' && isOpen && (
                      <div class="mt-3 pt-3 border-t border-gray-200 flex gap-2">
                        <button
                          type="button"
                          class="resolve-btn text-sm px-3 py-1 bg-green-500 text-white rounded hover:bg-green-600 transition-colors"
                          data-conversation-id={conversation!.id}
                        >
                          ✓ Ja, opgelost!
                        </button>
                        <button
                          type="button"
                          class="need-help-btn text-sm px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors"
                        >
                          ✗ Ik heb meer hulp nodig
                        </button>
                      </div>
                    )}
                  </div>
                </div>
              );
            })}
          </div>
        </div>

        <!-- Satisfaction Rating -->
        {showRating && (
          <div class="bg-green-50 border border-green-200 rounded-xl p-6" id="ratingSection">
            <h3 class="font-semibold text-green-900 mb-3">Hoe tevreden ben je met de hulp?</h3>
            <div class="flex items-center gap-2 mb-4">
              {[1, 2, 3, 4, 5].map(rating => (
                <button
                  type="button"
                  class="rating-star text-3xl text-gray-300 hover:text-yellow-400 transition-colors"
                  data-rating={rating}
                >
                  ★
                </button>
              ))}
            </div>
            <textarea
              id="ratingFeedback"
              placeholder="Optioneel: vertel ons wat we beter kunnen doen..."
              rows="2"
              class="w-full px-3 py-2 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none text-sm"
            ></textarea>
            <button
              type="button"
              id="submitRating"
              class="mt-3 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm"
              disabled
            >
              Beoordeling versturen
            </button>
          </div>
        )}

        <!-- Reply Form -->
        {isOpen && (
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <form id="replyForm" class="space-y-4">
              <textarea
                id="replyMessage"
                rows="3"
                placeholder="Typ je bericht..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-exact-blue focus:border-transparent focus:outline-none resize-none"
              ></textarea>
              <div class="flex justify-between items-center">
                <button
                  type="button"
                  id="markResolvedBtn"
                  class="text-sm text-green-600 hover:text-green-800"
                >
                  Markeer als opgelost
                </button>
                <button
                  type="submit"
                  id="sendReplyBtn"
                  class="px-4 py-2 bg-exact-blue text-white font-medium rounded-lg hover:bg-exact-dark transition-colors flex items-center gap-2"
                >
                  <span class="btn-text">Verstuur</span>
                  <svg class="btn-spinner hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        )}

        {/* Closed message */}
        {!isOpen && !showRating && (
          <div class="bg-gray-50 border border-gray-200 rounded-xl p-6 text-center">
            <p class="text-gray-600">Dit gesprek is gesloten.</p>
            <a
              href="/support/new"
              class="inline-block mt-3 text-exact-blue hover:underline"
            >
              Start een nieuw gesprek →
            </a>
          </div>
        )}
      </div>
    )}
  </div>

  <script define:vars={{ conversationId: id }}>
    const messagesContainer = document.getElementById('messagesContainer');
    const replyForm = document.getElementById('replyForm');
    const replyMessage = document.getElementById('replyMessage');
    const sendReplyBtn = document.getElementById('sendReplyBtn');
    const markResolvedBtn = document.getElementById('markResolvedBtn');

    // Scroll to bottom
    if (messagesContainer) {
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    // Send reply
    replyForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const content = replyMessage?.value.trim();
      if (!content) return;

      sendReplyBtn?.setAttribute('disabled', 'true');
      sendReplyBtn?.querySelector('.btn-spinner')?.classList.remove('hidden');

      try {
        const response = await fetch(`/api/support/conversations/${conversationId}/messages`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ content }),
        });

        if (response.ok) {
          window.location.reload();
        } else {
          const data = await response.json();
          alert(data.error || 'Er is een fout opgetreden');
        }
      } catch (error) {
        alert('Er is een fout opgetreden');
      } finally {
        sendReplyBtn?.removeAttribute('disabled');
        sendReplyBtn?.querySelector('.btn-spinner')?.classList.add('hidden');
      }
    });

    // Mark as resolved
    markResolvedBtn?.addEventListener('click', async () => {
      if (!confirm('Weet je zeker dat je dit gesprek als opgelost wilt markeren?')) return;

      try {
        const response = await fetch(`/api/support/conversations/${conversationId}/resolve`, {
          method: 'POST',
        });

        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        alert('Er is een fout opgetreden');
      }
    });

    // Quick resolve buttons
    document.querySelectorAll('.resolve-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        try {
          const response = await fetch(`/api/support/conversations/${conversationId}/resolve`, {
            method: 'POST',
          });

          if (response.ok) {
            window.location.reload();
          }
        } catch (error) {
          alert('Er is een fout opgetreden');
        }
      });
    });

    // Need more help - focus on reply
    document.querySelectorAll('.need-help-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        replyMessage?.focus();
      });
    });

    // Rating system
    let selectedRating = 0;
    const ratingStars = document.querySelectorAll('.rating-star');
    const submitRatingBtn = document.getElementById('submitRating');
    const ratingFeedback = document.getElementById('ratingFeedback');

    ratingStars.forEach(star => {
      star.addEventListener('click', () => {
        selectedRating = parseInt(star.dataset.rating || '0');

        ratingStars.forEach((s, i) => {
          if (i < selectedRating) {
            s.classList.remove('text-gray-300');
            s.classList.add('text-yellow-400');
          } else {
            s.classList.add('text-gray-300');
            s.classList.remove('text-yellow-400');
          }
        });

        submitRatingBtn?.removeAttribute('disabled');
      });
    });

    submitRatingBtn?.addEventListener('click', async () => {
      if (!selectedRating) return;

      try {
        const response = await fetch(`/api/support/conversations/${conversationId}/rate`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            rating: selectedRating,
            feedback: ratingFeedback?.value || null,
          }),
        });

        if (response.ok) {
          document.getElementById('ratingSection')?.remove();
          // SEC-001: Show thank you message using textContent (safe from XSS)
          const thankYou = document.createElement('div');
          thankYou.className = 'bg-green-50 border border-green-200 rounded-xl p-6 text-center';
          const thankYouText = document.createElement('p');
          thankYouText.className = 'text-green-700 font-medium';
          thankYouText.textContent = 'Bedankt voor je feedback!';
          thankYou.appendChild(thankYouText);
          document.querySelector('.space-y-6')?.appendChild(thankYou);
        }
      } catch (error) {
        alert('Er is een fout opgetreden');
      }
    });
  </script>
</Layout>

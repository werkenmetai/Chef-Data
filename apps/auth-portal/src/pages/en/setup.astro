---
import Layout from '../../layouts/Layout.astro';
import { Database } from '../../lib/database';

const env = Astro.locals.runtime.env;
const db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);

// Check if user is logged in
const sessionId = Astro.cookies.get('session_id')?.value;
let user: { email: string } | null = null;
let apiKey: string | null = null;
let hasConnection = false;
let showApiKeyBanner = false;

// Check for new API key from callback (shown once)
const newApiKey = Astro.cookies.get('new_api_key')?.value;
if (newApiKey) {
  apiKey = newApiKey;
  showApiKeyBanner = true;
  Astro.cookies.delete('new_api_key', { path: '/' });
}

if (sessionId) {
  const sessionResult = await db.validateSession(sessionId);
  if (sessionResult) {
    user = { email: sessionResult.user.email };
    const connections = await db.getConnectionsByUser(sessionResult.user.id);
    hasConnection = connections.length > 0;
  }
}

const mcpBaseUrl = "https://api.praatmetjeboekhouding.nl/sse";
const displayKey = apiKey || "YOUR_API_KEY";

// Simple URL with API key embedded (easiest method)
const simpleUrl = apiKey
  ? `${mcpBaseUrl}/${apiKey}`
  : `${mcpBaseUrl}/YOUR_API_KEY`;
---

<Layout title="Setup Instructions" description="Step-by-step guide to connect Exact Online with ChatGPT, Claude or Copilot. Configure MCP in minutes, no coding required." lang="en">
  <div class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Configure MCP</h1>
    <p class="text-gray-600 mb-4">Follow these steps to use Exact Online with your favorite AI assistant.</p>

    {/* Progress indicator */}
    <div class="mb-8 p-4 bg-gray-50 rounded-lg border border-gray-200">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center gap-2">
          <span class={`w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold ${hasConnection ? 'bg-green-500 text-white' : 'bg-exact-blue text-white'}`}>
            {hasConnection ? '✓' : '1'}
          </span>
          <span class={hasConnection ? 'text-green-700 font-medium' : 'text-gray-900 font-medium'}>Connect</span>
        </div>
        <div class={`flex-1 h-0.5 mx-2 ${hasConnection ? 'bg-green-500' : 'bg-gray-300'}`}></div>
        <div class="flex items-center gap-2">
          <span class={`w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold ${hasConnection ? 'bg-exact-blue text-white' : 'bg-gray-300 text-gray-600'}`}>2</span>
          <span class={hasConnection ? 'text-gray-900 font-medium' : 'text-gray-500'}>Configure</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <span class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold bg-gray-300 text-gray-600">3</span>
          <span class="text-gray-500">Restart</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <span class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold bg-gray-300 text-gray-600">4</span>
          <span class="text-gray-500">Test</span>
        </div>
      </div>
    </div>

    {showApiKeyBanner && apiKey && (
      <div class="mb-8 p-6 bg-green-50 border-2 border-green-300 rounded-xl">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <h3 class="text-lg font-bold text-green-900">Account created! Here's your API Key:</h3>
            <p class="text-green-700 text-sm mt-1 mb-3">
              Save this key securely. The configuration below is already filled in with your key.
            </p>
            <div class="bg-white rounded-lg border border-green-300 p-3 font-mono text-sm break-all select-all">
              {apiKey}
            </div>
            <button
              id="copyApiKeyBanner"
              data-key={apiKey}
              class="mt-3 px-4 py-2 bg-green-600 text-white text-sm font-medium rounded hover:bg-green-700 transition-colors"
            >
              Copy API Key
            </button>
          </div>
        </div>
      </div>
    )}

    {!showApiKeyBanner && user ? (
      <div class={`mb-8 p-4 rounded-lg border ${hasConnection ? 'bg-green-50 border-green-200' : 'bg-yellow-50 border-yellow-200'}`}>
        <p class={hasConnection ? 'text-green-800' : 'text-yellow-800'}>
          {hasConnection ? (
            <>
              <strong>Logged in as {user.email}</strong> - Your Exact Online account is connected.
              <a href="/en/dashboard" class="underline ml-2">Go to Dashboard</a>
            </>
          ) : (
            <>
              <strong>Logged in as {user.email}</strong> - You haven't connected Exact Online yet.
              <a href="/en/connect" class="underline ml-2">Connect now</a>
            </>
          )}
        </p>
      </div>
    ) : !showApiKeyBanner && (
      <div class="mb-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-blue-800">
          <strong>Not logged in yet?</strong>
          <a href="/en/connect" class="underline ml-2">Connect your Exact Online account first</a> to get an API key.
        </p>
      </div>
    )}

    <!-- Step 1 -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
        <span class={`w-8 h-8 rounded-full flex items-center justify-center font-bold mr-3 text-sm ${hasConnection ? 'bg-green-500 text-white' : 'bg-exact-blue text-white'}`}>
          {hasConnection ? '✓' : '1'}
        </span>
        Connect Exact Online & Get API Key
      </h2>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 ml-11">
        {hasConnection ? (
          <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
            <p class="text-green-800 font-medium">Your Exact Online account is connected!</p>
            <p class="text-green-700 text-sm mt-1">
              Go to your <a href="/en/dashboard" class="underline">Dashboard</a> to copy your API key or generate a new one.
            </p>
          </div>
        ) : (
          <>
            <p class="text-gray-600 mb-4">
              Click the button below to connect your Exact Online account. After successful connection you'll receive an API key.
            </p>
            <a
              href="/en/connect"
              class="inline-block px-6 py-3 bg-exact-blue text-white font-semibold rounded-lg hover:bg-exact-dark transition-colors"
            >
              Connect to Exact Online
            </a>
          </>
        )}
      </div>
    </section>

    <!-- Step 2 -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-exact-blue text-white rounded-full flex items-center justify-center font-bold mr-3 text-sm">2</span>
        Configure your AI Assistant
      </h2>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 ml-11">
        <div class="flex flex-wrap border-b border-gray-200 mb-4 gap-1">
          <button class="tab-btn px-4 py-2 text-exact-blue border-b-2 border-exact-blue font-medium" data-tab="desktop">
            Claude Desktop
          </button>
          <button class="tab-btn px-4 py-2 text-gray-500 hover:text-gray-700" data-tab="chatgpt">
            ChatGPT
          </button>
          <button class="tab-btn px-4 py-2 text-gray-500 hover:text-gray-700" data-tab="cursor">
            Cursor
          </button>
          <button class="tab-btn px-4 py-2 text-gray-500 hover:text-gray-700" data-tab="windsurf">
            Windsurf
          </button>
          <button class="tab-btn px-4 py-2 text-gray-500 hover:text-gray-700" data-tab="code">
            Claude Code
          </button>
        </div>

        <div id="tab-desktop" class="tab-content">
          <!-- Method 1: Simple - One URL (Recommended) -->
          <div class="mb-6 p-4 bg-green-50 border-2 border-green-300 rounded-lg">
            <h4 class="font-semibold text-green-900 mb-2">Method 1: Copy One URL (Recommended)</h4>
            <ol class="list-decimal list-inside space-y-2 text-green-800 text-sm">
              <li>Open Claude Desktop → <strong>Settings</strong> → <strong>Connectors</strong></li>
              <li>Click <strong>Add custom connector</strong></li>
              <li>Enter:
                <ul class="ml-6 mt-1 space-y-1">
                  <li>• <strong>Name:</strong> <code class="bg-green-100 px-1 rounded">Praat met je Boekhouding</code></li>
                  <li>• <strong>Remote MCP server URL:</strong> paste the URL below</li>
                </ul>
              </li>
              <li>Click <strong>Add</strong> - done!</li>
            </ol>
            {apiKey ? (
              <div class="mt-3">
                <p class="text-green-700 text-xs mb-2">Your personal URL (includes API key):</p>
                <div class="flex items-center gap-2">
                  <input
                    type="text"
                    value={simpleUrl}
                    readonly
                    class="flex-1 bg-white border border-green-300 rounded px-3 py-2 text-sm font-mono"
                  />
                  <button class="copy-url-btn px-3 py-2 bg-green-600 text-white text-sm font-semibold rounded hover:bg-green-700" data-url={simpleUrl}>
                    Copy URL
                  </button>
                </div>
                <p class="text-green-600 text-xs mt-2">
                  ⚠️ Don't share this URL with others - it contains your personal API key!
                </p>
              </div>
            ) : (
              <div class="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded">
                <p class="text-yellow-800 text-sm">
                  <strong>Connect your Exact Online first</strong> to get your personal URL.
                  <a href="/en/connect" class="underline ml-1">Connect now →</a>
                </p>
              </div>
            )}
          </div>

          <!-- Method 2: JSON config (Alternative) -->
          <details class="group">
            <summary class="cursor-pointer text-gray-600 hover:text-gray-900 mb-2">
              <span class="font-medium">Method 2: Via JSON config file (Alternative)</span>
            </summary>
            <div class="mt-4">
              <p class="text-gray-600 mb-4">Open the Claude Desktop configuration file:</p>
              <div class="bg-gray-100 rounded-lg p-3 mb-2 text-sm">
                <p class="font-medium text-gray-700">macOS:</p>
                <code class="text-gray-800 break-all">~/Library/Application Support/Claude/claude_desktop_config.json</code>
              </div>
              <div class="bg-gray-100 rounded-lg p-3 mb-4 text-sm">
                <p class="font-medium text-gray-700">Windows:</p>
                <code class="text-gray-800 break-all">%APPDATA%\Claude\claude_desktop_config.json</code>
              </div>
              <div class="bg-gray-900 rounded-lg p-4 overflow-x-auto relative">
                <button class="copy-btn absolute top-2 right-2 px-2 py-1 bg-gray-700 text-gray-300 text-xs rounded hover:bg-gray-600">Copy</button>
                <pre class="text-sm text-gray-100"><code>{`{
  "mcpServers": {
    "exact-online": {
      "url": "${mcpBaseUrl}",
      "headers": {
        "Authorization": "Bearer ${displayKey}"
      }
    }
  }
}`}</code></pre>
              </div>
            </div>
          </details>
        </div>

        <!-- ChatGPT Tab -->
        <div id="tab-chatgpt" class="tab-content hidden">
          <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
            <p class="text-blue-800 text-sm">
              <strong>ChatGPT Plus/Team/Enterprise required</strong> - Connectors are only available for paid subscriptions.
            </p>
          </div>

          <h4 class="font-semibold text-gray-900 mb-3">Step 1: Enable Developer Mode</h4>
          <ol class="list-decimal list-inside space-y-2 text-gray-600 mb-6 text-sm">
            <li>Open ChatGPT web version and click your profile name</li>
            <li>Go to <strong>Settings</strong> → <strong>Connectors</strong> → <strong>Advanced settings</strong></li>
            <li>Enable <strong>Developer mode</strong></li>
          </ol>

          <h4 class="font-semibold text-gray-900 mb-3">Step 2: Create Connector</h4>
          <ol class="list-decimal list-inside space-y-2 text-gray-600 mb-4 text-sm">
            <li>Go back to <strong>Connectors</strong> and click <strong>Create</strong></li>
            <li>Enter the following:
              <ul class="ml-6 mt-1 space-y-1">
                <li>• <strong>Name:</strong> <code class="bg-gray-100 px-1 rounded">Praat met je Boekhouding</code></li>
                <li>• <strong>URL:</strong> paste the URL below</li>
                <li>• <strong>Authentication:</strong> No authentication (key is in URL)</li>
              </ul>
            </li>
            <li>Check <strong>"I trust this application"</strong></li>
            <li>Click <strong>Create</strong></li>
          </ol>

          {apiKey ? (
            <div class="mb-6">
              <p class="text-gray-700 text-sm mb-2">Your personal MCP URL:</p>
              <div class="flex items-center gap-2">
                <input
                  type="text"
                  value={simpleUrl}
                  readonly
                  class="flex-1 bg-gray-50 border border-gray-300 rounded px-3 py-2 text-sm font-mono"
                />
                <button class="copy-url-btn px-3 py-2 bg-exact-blue text-white text-sm font-semibold rounded hover:bg-exact-dark" data-url={simpleUrl}>
                  Copy
                </button>
              </div>
            </div>
          ) : (
            <div class="mb-6 p-3 bg-yellow-50 border border-yellow-200 rounded">
              <p class="text-yellow-800 text-sm">
                <a href="/en/connect" class="underline font-medium">Connect your Exact Online first</a> to get your personal URL.
              </p>
            </div>
          )}

          <h4 class="font-semibold text-gray-900 mb-3">Step 3: Use in Chat</h4>
          <ol class="list-decimal list-inside space-y-2 text-gray-600 mb-4 text-sm">
            <li>Open a new chat conversation</li>
            <li>Click the <strong>+</strong> sign in the message bar</li>
            <li>Select <strong>More</strong> → <strong>Developer Mode</strong></li>
            <li>Click <strong>Add sources</strong> and enable your connector</li>
          </ol>

          <div class="p-4 bg-gray-50 border border-gray-200 rounded-lg">
            <h5 class="font-medium text-gray-900 mb-2">Connection issues?</h5>
            <p class="text-gray-600 text-sm">
              If the standard URL doesn't work, try these alternatives:
            </p>
            <ul class="text-gray-600 text-sm mt-2 space-y-1">
              <li>• Replace <code class="bg-gray-200 px-1 rounded">/sse/</code> with <code class="bg-gray-200 px-1 rounded">/stateless/</code></li>
              <li>• Or try <code class="bg-gray-200 px-1 rounded">/mcp/</code></li>
            </ul>
          </div>
        </div>

        <div id="tab-cursor" class="tab-content hidden">
          <p class="text-gray-600 mb-4">
            In Cursor you can add MCP servers via Settings:
          </p>
          <ol class="list-decimal list-inside space-y-2 text-gray-600 mb-4">
            <li>Open Cursor Settings (<kbd class="bg-gray-100 px-1 rounded">Cmd/Ctrl + ,</kbd>)</li>
            <li>Search for "MCP" or go to <strong>Features → MCP Servers</strong></li>
            <li>Click <strong>Add new MCP server</strong></li>
            <li>Select <strong>SSE</strong> as type</li>
          </ol>
          <p class="text-gray-600 mb-4">
            Or manually edit <code class="bg-gray-100 px-1 rounded">~/.cursor/mcp.json</code>:
          </p>
          <div class="bg-gray-900 rounded-lg p-4 overflow-x-auto relative">
            <button class="copy-btn absolute top-2 right-2 px-2 py-1 bg-gray-700 text-gray-300 text-xs rounded hover:bg-gray-600">Copy</button>
            <pre class="text-sm text-gray-100"><code>{`{
  "mcpServers": {
    "exact-online": {
      "url": "${mcpBaseUrl}",
      "headers": {
        "Authorization": "Bearer ${displayKey}"
      }
    }
  }
}`}</code></pre>
          </div>
        </div>

        <div id="tab-windsurf" class="tab-content hidden">
          <p class="text-gray-600 mb-4">
            In Windsurf you can add MCP servers via the configuration:
          </p>
          <div class="bg-gray-100 rounded-lg p-3 mb-4 text-sm">
            <p class="font-medium text-gray-700">Config file:</p>
            <code class="text-gray-800">~/.codeium/windsurf/mcp_config.json</code>
          </div>
          <p class="text-gray-600 mb-4">Add this configuration:</p>
          <div class="bg-gray-900 rounded-lg p-4 overflow-x-auto relative">
            <button class="copy-btn absolute top-2 right-2 px-2 py-1 bg-gray-700 text-gray-300 text-xs rounded hover:bg-gray-600">Copy</button>
            <pre class="text-sm text-gray-100"><code>{`{
  "mcpServers": {
    "exact-online": {
      "serverUrl": "${mcpBaseUrl}",
      "headers": {
        "Authorization": "Bearer ${displayKey}"
      }
    }
  }
}`}</code></pre>
          </div>
        </div>

        <!-- Claude Code Tab -->
        <div id="tab-code" class="tab-content hidden">
          <p class="text-gray-600 mb-4">
            The easiest way is via the CLI:
          </p>
          <div class="bg-gray-900 rounded-lg p-4 mb-4 overflow-x-auto relative">
            <button class="copy-btn absolute top-2 right-2 px-2 py-1 bg-gray-700 text-gray-300 text-xs rounded hover:bg-gray-600">
              Copy
            </button>
            <pre class="text-sm text-gray-100"><code>{`claude mcp add exact-online --transport sse "${mcpBaseUrl}" -- --header "Authorization: Bearer ${displayKey}"`}</code></pre>
          </div>

          <details class="group mb-4">
            <summary class="cursor-pointer text-gray-600 hover:text-gray-900 mb-2">
              <span class="font-medium">Server already exists? Remove first</span>
            </summary>
            <div class="mt-3 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
              <p class="text-yellow-800 text-sm mb-3">
                If you get <code class="bg-yellow-100 px-1 rounded">"MCP server exact-online already exists"</code>:
              </p>
              <div class="bg-gray-900 rounded-lg p-3 mb-3 overflow-x-auto relative">
                <button class="copy-btn absolute top-2 right-2 px-2 py-1 bg-gray-700 text-gray-300 text-xs rounded hover:bg-gray-600">
                  Copy
                </button>
                <pre class="text-sm text-gray-100"><code>claude mcp remove exact-online</code></pre>
              </div>
              <p class="text-yellow-700 text-sm">
                Then you can add the server again with the command above.
              </p>
            </div>
          </details>

          <p class="text-gray-600 mb-4">
            Or manually edit <code class="bg-gray-100 px-1 rounded">~/.claude/settings.json</code>:
          </p>
          <div class="bg-gray-900 rounded-lg p-4 overflow-x-auto relative">
            <button class="copy-btn absolute top-2 right-2 px-2 py-1 bg-gray-700 text-gray-300 text-xs rounded hover:bg-gray-600">Copy</button>
            <pre class="text-sm text-gray-100"><code>{`{
  "mcpServers": {
    "exact-online": {
      "url": "${mcpBaseUrl}",
      "headers": {
        "Authorization": "Bearer ${displayKey}"
      }
    }
  }
}`}</code></pre>
          </div>
        </div>

        <!-- API Key reminder -->
        <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <p class="text-sm text-blue-800">
            <strong>Need your API key?</strong> Go to your <a href="/en/dashboard" class="text-blue-600 underline">Dashboard</a> to copy your key or generate a new one.
          </p>
        </div>
      </div>
    </section>

    <!-- Step 3 -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-exact-blue text-white rounded-full flex items-center justify-center font-bold mr-3 text-sm">3</span>
        Restart your AI Assistant
      </h2>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 ml-11">
        <p class="text-gray-600">Completely close and restart your AI assistant. The MCP server will be loaded automatically.</p>
      </div>
    </section>

    <!-- Step 4 -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-exact-blue text-white rounded-full flex items-center justify-center font-bold mr-3 text-sm">4</span>
        Test the Connection
      </h2>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 ml-11">
        <p class="text-gray-600 mb-4">Open a new chat and try one of these questions:</p>
        <div class="space-y-3">
          <div class="bg-gray-100 rounded-lg p-3">
            <p class="text-gray-800 italic">"Which Exact Online administrations do I have?"</p>
          </div>
          <div class="bg-gray-100 rounded-lg p-3">
            <p class="text-gray-800 italic">"Show all outstanding invoices"</p>
          </div>
          <div class="bg-gray-100 rounded-lg p-3">
            <p class="text-gray-800 italic">"Give an overview of revenue this year"</p>
          </div>
        </div>
      </div>
    </section>

    <!-- External Resources -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">External Resources</h2>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <p class="text-gray-600 mb-4">Need more help? Check out these guides:</p>
        <ul class="space-y-2 text-gray-600">
          <li class="flex items-start">
            <svg class="w-5 h-5 text-exact-blue mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            <a href="https://developers.make.com/mcp-server/connect-using-mcp-token/usage-with-chatgpt" target="_blank" rel="noopener" class="text-exact-blue hover:underline">
              Make.com: Using MCP with ChatGPT
            </a>
            <span class="text-gray-500 text-sm ml-2">- Detailed guide for ChatGPT MCP setup</span>
          </li>
          <li class="flex items-start">
            <svg class="w-5 h-5 text-exact-blue mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            <a href="https://modelcontextprotocol.io/" target="_blank" rel="noopener" class="text-exact-blue hover:underline">
              Model Context Protocol (MCP)
            </a>
            <span class="text-gray-500 text-sm ml-2">- Official MCP documentation</span>
          </li>
        </ul>
      </div>
    </section>
  </div>

  <script>
    document.querySelectorAll('.tab-btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        const button = btn as HTMLElement;
        const tabId = button.dataset.tab;
        document.querySelectorAll('.tab-btn').forEach(b => {
          b.classList.remove('text-exact-blue', 'border-b-2', 'border-exact-blue', 'font-medium');
          b.classList.add('text-gray-500');
        });
        btn.classList.add('text-exact-blue', 'border-b-2', 'border-exact-blue', 'font-medium');
        btn.classList.remove('text-gray-500');
        document.querySelectorAll('.tab-content').forEach(c => c.classList.add('hidden'));
        document.getElementById(`tab-${tabId}`)?.classList.remove('hidden');
      });
    });

    document.getElementById('copyApiKeyBanner')?.addEventListener('click', function() {
      const key = this.getAttribute('data-key');
      if (key) {
        navigator.clipboard.writeText(key);
        this.textContent = 'Copied!';
        setTimeout(() => this.textContent = 'Copy API Key', 2000);
      }
    });

    document.querySelectorAll('.copy-btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        const button = btn as HTMLElement;
        const code = button.parentElement?.querySelector('code')?.textContent;
        if (code) {
          navigator.clipboard.writeText(code);
          button.textContent = 'Copied!';
          setTimeout(() => button.textContent = 'Copy', 2000);
        }
      });
    });

    // Copy URL buttons
    document.querySelectorAll('.copy-url-btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        const button = btn as HTMLElement;
        const url = button.dataset.url;
        if (url) {
          navigator.clipboard.writeText(url);
          button.textContent = 'Copied!';
          setTimeout(() => button.textContent = 'Copy URL', 2000);
        }
      });
    });
  </script>

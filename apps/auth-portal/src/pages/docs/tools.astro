      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        {toolCategories.map((cat) => (
          <a
            href={`#${cat.name.toLowerCase().replace(/[^a-z0-9]/g, '-')}`}
            class="flex items-center gap-2 text-gray-700 hover:text-exact-blue transition-colors"

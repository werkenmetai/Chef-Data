---
import Layout from '../../layouts/Layout.astro';
import {
  PLAN_LIMITS,
  PLAN_NAMES,
  PLAN_FEATURES,
} from '@exact-mcp/shared';

// Map Dutch features to English
const PLAN_FEATURES_EN: Record<string, string[]> = {
  free: [
    '~60 questions per month',
    '2 administrations',
    'ChatGPT, Claude & Copilot',
    'Read-only access',
  ],
  starter: [
    '~250 questions per month',
    '3 administrations',
    'Everything in Free',
    'Email support',
  ],
  pro: [
    '~800 questions per month',
    '10 administrations',
    'Everything in Starter',
    'Priority support',
  ],
  enterprise: [
    'Unlimited questions',
    'Unlimited administrations',
    'Dedicated support',
    'Custom integrations',
  ],
};

const PLAN_NAMES_EN: Record<string, string> = {
  free: 'Free',
  starter: 'Starter',
  pro: 'Pro',
  enterprise: 'Enterprise',
};

const PLAN_DESCRIPTIONS_EN: Record<string, string> = {
  free: 'Perfect to try it out',
  starter: 'For freelancers and small business',
  pro: 'For SMB and accountants',
  enterprise: 'For large organizations',
};
---

<Layout title="Pricing" description="Chat with your Books pricing: Start free with ~60 questions/month. Starter €9/month, Pro €25/month for accountants. Enterprise custom plans." lang="en">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Simple, transparent pricing</h1>
      <p class="text-xl text-gray-600">Start free, upgrade as you grow.</p>
    </div>

    <!-- Early Adopter Banner -->
    <div class="bg-gradient-to-r from-exact-blue to-exact-dark text-white rounded-2xl p-6 mb-12 text-center">
      <div class="flex items-center justify-center gap-2 mb-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="font-bold text-lg">Early Adopter Benefit</span>
      </div>
      <p class="text-white/90">
        Sign up before July 1, 2026 and keep your current price <strong>forever</strong>,
        even if we raise prices later.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid md:grid-cols-4 gap-6 mb-16">
      <!-- Free -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <div class="mb-4">
          <h2 class="text-lg font-semibold text-gray-900">{PLAN_NAMES_EN.free}</h2>
          <p class="text-gray-600 text-sm mt-1">{PLAN_DESCRIPTIONS_EN.free}</p>
        </div>
        <div class="mb-4">
          <span class="text-4xl font-bold text-gray-900">€0</span>
          <span class="text-gray-600">/month</span>
        </div>
        <ul class="space-y-2 mb-6 text-sm">
          {PLAN_FEATURES_EN.free.map((feature) => (
            <li class="flex items-start text-gray-600">
              <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
        <a
          href="/en/connect"
          class="block w-full py-3 text-center border-2 border-exact-blue text-exact-blue font-semibold rounded-lg hover:bg-exact-light transition-colors"
        >
          Start free
        </a>
      </div>

      <!-- Starter -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <div class="mb-4">
          <h2 class="text-lg font-semibold text-gray-900">{PLAN_NAMES_EN.starter}</h2>
          <p class="text-gray-600 text-sm mt-1">{PLAN_DESCRIPTIONS_EN.starter}</p>
        </div>
        <div class="mb-4">
          <span class="text-4xl font-bold text-gray-900">€{PLAN_LIMITS.starter.price}</span>
          <span class="text-gray-600">/month</span>
        </div>
        <ul class="space-y-2 mb-6 text-sm">
          {PLAN_FEATURES_EN.starter.map((feature) => (
            <li class="flex items-start text-gray-600">
              <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
        <a
          href="/en/connect"
          class="block w-full py-3 text-center border-2 border-exact-blue text-exact-blue font-semibold rounded-lg hover:bg-exact-light transition-colors"
        >
          Start Starter
        </a>
      </div>

      <!-- Pro (Popular) -->
      <div class="bg-white rounded-2xl shadow-lg border-2 border-exact-blue p-6 relative">
        <div class="absolute -top-3 left-1/2 -translate-x-1/2">
          <span class="bg-exact-blue text-white text-sm font-medium px-3 py-1 rounded-full">Popular</span>
        </div>
        <div class="mb-4">
          <h2 class="text-lg font-semibold text-gray-900">{PLAN_NAMES_EN.pro}</h2>
          <p class="text-gray-600 text-sm mt-1">{PLAN_DESCRIPTIONS_EN.pro}</p>
        </div>
        <div class="mb-4">
          <span class="text-4xl font-bold text-gray-900">€{PLAN_LIMITS.pro.price}</span>
          <span class="text-gray-600">/month</span>
        </div>
        <ul class="space-y-2 mb-6 text-sm">
          {PLAN_FEATURES_EN.pro.map((feature) => (
            <li class="flex items-start text-gray-600">
              <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
        <a
          href="/en/connect"
          class="block w-full py-3 text-center bg-exact-blue text-white font-semibold rounded-lg hover:bg-exact-dark transition-colors"
        >
          Start Pro
        </a>
      </div>

      <!-- Enterprise -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <div class="mb-4">
          <h2 class="text-lg font-semibold text-gray-900">{PLAN_NAMES_EN.enterprise}</h2>
          <p class="text-gray-600 text-sm mt-1">{PLAN_DESCRIPTIONS_EN.enterprise}</p>
        </div>
        <div class="mb-4">
          <span class="text-3xl font-bold text-gray-900">Custom</span>
        </div>
        <ul class="space-y-2 mb-6 text-sm">
          {PLAN_FEATURES_EN.enterprise.map((feature) => (
            <li class="flex items-start text-gray-600">
              <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
        <a
          href="mailto:enterprise@praatmetjeboekhouding.nl"
          class="block w-full py-3 text-center border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors"
        >
          Contact us
        </a>
      </div>
    </div>

    <!-- FAQ -->
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Frequently asked questions</h2>
      <div class="space-y-4">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="font-semibold text-gray-900 mb-2">What is a "question"?</h3>
          <p class="text-gray-600">We show you the number of questions you can ask (~60, ~250, ~800). Internally, each question uses 2-4 API calls on average. A complex question with follow-ups may use more.</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="font-semibold text-gray-900 mb-2">What is an "administration"?</h3>
          <p class="text-gray-600">An administration is a company or accounting entity in Exact Online. Many entrepreneurs have a holding + operating company (= 2 administrations).</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="font-semibold text-gray-900 mb-2">Can I upgrade or downgrade?</h3>
          <p class="text-gray-600">Yes, you can switch plans anytime. Upgrades take effect immediately, downgrades at the end of your billing period.</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="font-semibold text-gray-900 mb-2">How does billing work?</h3>
          <p class="text-gray-600">Billing goes through the Exact Online App Store. You'll see the charges on your Exact Online invoice.</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="font-semibold text-gray-900 mb-2">What about data privacy?</h3>
          <p class="text-gray-600">We are fully GDPR compliant. Data is processed within the EU and we only store OAuth tokens, not your business data.</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="font-semibold text-gray-900 mb-2">How can I cancel my subscription?</h3>
          <p class="text-gray-600">Cancel anytime via your Exact Online App Store settings. You keep access until the end of your paid period, then you're automatically moved to the free plan.</p>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-16 text-center bg-exact-light rounded-2xl p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to get started?</h2>
      <p class="text-gray-600 mb-6">Start free and discover how AI can accelerate your bookkeeping work.</p>
      <a
        href="/en/connect"
        class="inline-block px-8 py-3 bg-exact-blue text-white font-semibold rounded-lg hover:bg-exact-dark transition-colors"
      >
        Start free →
      </a>
    </div>
  </div>
</Layout>

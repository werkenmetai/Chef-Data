/**
 * Customer Developer Page
 *
 * Dedicated page for customers to manage their API keys and view usage.
 * API keys are only shown in full ONCE at creation - after that only the prefix is visible.
 */
import Layout from '../../layouts/Layout.astro';
import { Database, type User, type ApiKey } from '../../lib/database';
import { PLAN_LIMITS } from '../../lib/constants';

// Get environment
const env = Astro.locals.runtime?.env;
let db: Database | null = null;
let error: string | null = null;

let isAuthenticated = false;
let user: User | null = null;
let apiKeys: ApiKey[] = [];
let usageStats: { total: number; byEndpoint: Record<string, number> } | null = null;
let newApiKey: string | null = null;

// Plan info
let currentPlan = 'free';
let limits: { apiCalls: number; divisions: number; apiKeys: number } = PLAN_LIMITS.free;
let apiKeysCount = 0;
let canCreateMoreKeys = false;

// Handle POST actions
if (Astro.request.method === 'POST' && env?.DB) {
  db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);
  const formData = await Astro.request.formData();
  const action = formData.get('action');
  const sessionId = Astro.cookies.get('session_id')?.value;

  if (sessionId) {
    const sessionResult = await db.validateSession(sessionId);

    if (sessionResult) {
      if (action === 'generate_api_key') {
        const keyName = formData.get('key_name')?.toString() || 'Nieuwe Key';
        try {
          const { plainKey } = await db.createApiKey(sessionResult.user.id, keyName);
          newApiKey = plainKey;
        } catch (e) {
          error = e instanceof Error ? e.message : 'Er is een fout opgetreden bij het aanmaken van de sleutel.';
        }
      }

      if (action === 'revoke_api_key') {
        const keyId = formData.get('key_id')?.toString();
        if (keyId) {
          await db.revokeApiKey(keyId, sessionResult.user.id);
        }
      }

      if (action === 'rename_api_key') {
        const keyId = formData.get('key_id')?.toString();
        const newName = formData.get('new_name')?.toString();
        if (keyId && newName) {
          await db.renameApiKey(keyId, sessionResult.user.id, newName);
        }
      }
    }
  }
}

// Load data
const sessionId = Astro.cookies.get('session_id')?.value;
if (sessionId && env?.DB) {
  try {
    db = new Database(env.DB, env.TOKEN_ENCRYPTION_KEY);
    const sessionResult = await db.validateSession(sessionId);

    if (sessionResult) {
      user = sessionResult.user;
      isAuthenticated = true;

      // Load API keys
      apiKeys = await db.getApiKeysByUser(user.id);
      apiKeysCount = apiKeys.length;

      // Load usage stats
      usageStats = await db.getApiUsageStats(user.id, 30);

      // Plan limits
      currentPlan = user.plan || 'free';
      limits = PLAN_LIMITS[currentPlan as keyof typeof PLAN_LIMITS] || PLAN_LIMITS.free;
      canCreateMoreKeys = apiKeysCount < (limits.apiKeys === Infinity ? 999 : limits.apiKeys);
    }
  } catch (e) {
    console.error('Developer page error:', e);
    error = 'Er is een fout opgetreden bij het laden van de gegevens.';
  }
}

// Redirect if not authenticated
if (!isAuthenticated) {
  return Astro.redirect('/connect');
}

// Format number
function formatNumber(n: number): string {
  return n.toLocaleString('nl-NL');
}
---

<Layout title="Developer - Dashboard">
  <div class="max-w-4xl mx-auto px-4 py-8">
    {/* Header */}
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Developer</h1>
        <p class="text-gray-600">Beheer je API keys en bekijk je gebruik</p>
      </div>
      <a href="/dashboard" class="text-gray-600 hover:text-gray-900 flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
        &larr; Dashboard
      </a>
    </div>

    {/* New API Key Alert - ONLY shown once after creation */}
    {newApiKey && (
      <div class="mb-8 bg-green-50 border border-green-200 rounded-xl p-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-green-900 mb-2">API Key aangemaakt!</h3>
            <p class="text-green-800 text-sm mb-4">
              <strong>Kopieer deze key nu</strong> - je kunt hem na het verlaten van deze pagina niet meer zien.
            </p>
            <div class="bg-white border border-green-300 rounded-lg p-4 font-mono text-sm break-all select-all">
              {newApiKey}
            </div>
            <button
              type="button"
              id="copyNewKeyBtn"
              data-key={newApiKey}
              class="mt-4 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium"
            >
              Kopieer API Key
            </button>
          </div>
        </div>
      </div>
    )}

    {/* Error */}
    {error && (
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700">
        {error}
      </div>
    )}

    {/* Usage Stats */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center gap-3">
          <div class="p-2 bg-blue-100 rounded-lg">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900">{apiKeysCount}</p>
            <p class="text-sm text-gray-500">
              van {limits.apiKeys === Infinity ? '∞' : limits.apiKeys} keys
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center gap-3">
          <div class="p-2 bg-green-100 rounded-lg">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900">{formatNumber(usageStats?.total || 0)}</p>
            <p class="text-sm text-gray-500">API calls (30 dagen)</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center gap-3">
          <div class="p-2 bg-purple-100 rounded-lg">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900">{currentPlan}</p>
            <p class="text-sm text-gray-500">Huidig plan</p>
          </div>
        </div>
      </div>
    </div>

    {/* API Keys Section */}
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-8">
      <div class="p-6 border-b border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900">Je API Keys</h2>
        <p class="text-sm text-gray-500 mt-1">
          API keys worden versleuteld opgeslagen. Je ziet alleen de prefix voor identificatie.
        </p>
      </div>

      <div class="divide-y divide-gray-100">
        {apiKeys.length === 0 ? (
          <div class="p-6 text-center text-gray-500">
            Je hebt nog geen API keys. Maak er een aan om te beginnen.
          </div>
        ) : (
          apiKeys.map((key) => (
            <div class="p-4 hover:bg-gray-50 transition-colors group" id={`key-${key.id}`}>
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <span class="font-medium text-gray-900 key-name">{key.name}</span>
                    <button
                      type="button"
                      class="rename-btn text-gray-400 hover:text-exact-blue opacity-0 group-hover:opacity-100 transition-opacity"
                      data-key-id={key.id}
                      data-key-name={key.name}
                      title="Hernoem"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                      </svg>
                    </button>
                  </div>
                  <div class="flex items-center gap-4 mt-1">
                    <span class="text-sm text-gray-500 font-mono">{key.key_prefix}•••••••••</span>
                    <span class="text-xs text-gray-400">
                      Aangemaakt {new Date(key.created_at).toLocaleDateString('nl-NL')}
                    </span>
                    {key.last_used_at && (
                      <span class="text-xs text-green-600">
                        Laatst gebruikt {new Date(key.last_used_at).toLocaleDateString('nl-NL')}
                      </span>
                    )}
                  </div>
                </div>
                <button
                  type="button"
                  class="revoke-btn px-3 py-1.5 text-sm text-red-600 hover:bg-red-50 rounded-lg transition-colors opacity-0 group-hover:opacity-100"
                  data-key-id={key.id}
                  data-key-name={key.name}
                >
                  Intrekken
                </button>
              </div>
            </div>
          ))
        )}
      </div>

      {/* Create New Key */}
      <div class="p-6 bg-gray-50 border-t border-gray-100">
        {canCreateMoreKeys ? (
          <form method="POST" class="flex gap-3">
            <input type="hidden" name="action" value="generate_api_key" />
            <input
              type="text"
              name="key_name"
              placeholder="Naam voor deze key (bijv. 'Claude Desktop')"
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-exact-blue focus:border-transparent"
            />
            <button
              type="submit"
              class="px-6 py-2 bg-exact-blue text-white font-medium rounded-lg hover:bg-exact-dark transition-colors"
            >
              Nieuwe key aanmaken
            </button>
          </form>
        ) : (
          <div class="text-center text-amber-700 bg-amber-50 rounded-lg p-4">
            <strong>Limiet bereikt.</strong> Je hebt het maximum aantal keys ({limits.apiKeys}) voor je {currentPlan} plan.
            <a href="/pricing" class="underline ml-1">Upgrade voor meer</a>
          </div>
        )}
      </div>
    </div>

    {/* Documentation Links */}
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Documentatie</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/docs/claude-desktop-setup" class="p-4 border border-gray-200 rounded-lg hover:border-exact-blue hover:bg-blue-50 transition-colors group">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-purple-100 rounded-lg group-hover:bg-purple-200">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-gray-900">Claude Desktop Setup</h3>
              <p class="text-sm text-gray-500">Configureer Claude Desktop met je API key</p>
            </div>
          </div>
        </a>

        <a href="/docs" class="p-4 border border-gray-200 rounded-lg hover:border-exact-blue hover:bg-blue-50 transition-colors group">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-blue-100 rounded-lg group-hover:bg-blue-200">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-gray-900">API Documentatie</h3>
              <p class="text-sm text-gray-500">Alle beschikbare MCP tools</p>
            </div>
          </div>
        </a>

        <a href="/setup" class="p-4 border border-gray-200 rounded-lg hover:border-exact-blue hover:bg-blue-50 transition-colors group">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-green-100 rounded-lg group-hover:bg-green-200">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-gray-900">Snelstart Gids</h3>
              <p class="text-sm text-gray-500">Begin in 5 minuten</p>
            </div>
          </div>
        </a>

        <a href="/docs/ai-privacy" class="p-4 border border-gray-200 rounded-lg hover:border-exact-blue hover:bg-blue-50 transition-colors group">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-amber-100 rounded-lg group-hover:bg-amber-200">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-gray-900">Privacy & Beveiliging</h3>
              <p class="text-sm text-gray-500">Hoe je data beschermd wordt</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>

  {/* Rename Modal */}
  <div id="renameModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">API Key hernoemen</h3>
      <form method="POST">
        <input type="hidden" name="action" value="rename_api_key" />
        <input type="hidden" name="key_id" id="renameKeyId" value="" />
        <input
          type="text"
          name="new_name"
          id="renameInput"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-exact-blue focus:border-transparent mb-4"
          placeholder="Nieuwe naam"
        />
        <div class="flex gap-3 justify-end">
          <button type="button" id="cancelRename" class="px-4 py-2 text-gray-600 hover:text-gray-900">
            Annuleren
          </button>
          <button type="submit" class="px-4 py-2 bg-exact-blue text-white rounded-lg hover:bg-exact-dark">
            Opslaan
          </button>
        </div>
      </form>
    </div>
  </div>

  {/* Revoke Modal */}
  <div id="revokeModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">API Key intrekken</h3>
      <p class="text-gray-600 mb-4">
        Weet je zeker dat je <strong id="revokeKeyName"></strong> wilt intrekken?
        Dit kan niet ongedaan worden gemaakt.
      </p>
      <form method="POST">
        <input type="hidden" name="action" value="revoke_api_key" />
        <input type="hidden" name="key_id" id="revokeKeyId" value="" />
        <div class="flex gap-3 justify-end">
          <button type="button" id="cancelRevoke" class="px-4 py-2 text-gray-600 hover:text-gray-900">
            Annuleren
          </button>
          <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
            Intrekken
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Copy new API key
    const copyBtn = document.getElementById('copyNewKeyBtn') as HTMLButtonElement;
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        const key = copyBtn.dataset.key;
        if (key) {
          await navigator.clipboard.writeText(key);
          copyBtn.textContent = 'Gekopieerd!';
          copyBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
          copyBtn.classList.add('bg-gray-600');
          setTimeout(() => {
            copyBtn.textContent = 'Kopieer API Key';
            copyBtn.classList.remove('bg-gray-600');
            copyBtn.classList.add('bg-green-600', 'hover:bg-green-700');
          }, 2000);
        }
      });
    }

    // Rename modal
    const renameModal = document.getElementById('renameModal');
    const renameKeyId = document.getElementById('renameKeyId') as HTMLInputElement;
    const renameInput = document.getElementById('renameInput') as HTMLInputElement;
    const cancelRename = document.getElementById('cancelRename');

    document.querySelectorAll('.rename-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const keyId = (btn as HTMLElement).dataset.keyId;
        const keyName = (btn as HTMLElement).dataset.keyName;
        if (keyId && renameKeyId && renameInput && renameModal) {
          renameKeyId.value = keyId;
          renameInput.value = keyName || '';
          renameModal.classList.remove('hidden');
          renameInput.focus();
        }
      });
    });

    cancelRename?.addEventListener('click', () => {
      renameModal?.classList.add('hidden');
    });

    // Revoke modal
    const revokeModal = document.getElementById('revokeModal');
    const revokeKeyId = document.getElementById('revokeKeyId') as HTMLInputElement;
    const revokeKeyName = document.getElementById('revokeKeyName');
    const cancelRevoke = document.getElementById('cancelRevoke');

    document.querySelectorAll('.revoke-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const keyId = (btn as HTMLElement).dataset.keyId;
        const keyName = (btn as HTMLElement).dataset.keyName;
        if (keyId && revokeKeyId && revokeKeyName && revokeModal) {
          revokeKeyId.value = keyId;
          revokeKeyName.textContent = keyName || 'deze key';
          revokeModal.classList.remove('hidden');
        }
      });
    });

    cancelRevoke?.addEventListener('click', () => {
      revokeModal?.classList.add('hidden');
    });

    // Close modals on outside click
    [renameModal, revokeModal].forEach(modal => {
      modal?.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
        }
      });
    });
  </script>
</Layout>

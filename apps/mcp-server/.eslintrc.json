{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es2022": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
